{
  if (value == 0) {
    throw new ArithmeticException("Logarithm of zero is undefined.");
  }
  if ((value & (value - 1)) != 0) {
    throw new IllegalArgumentException("The given value " + value + " is not a power of two.");
  }
  int log=0;
  while ((value=value >>> 1) != 0) {
    log++;
  }
  return log;
}
