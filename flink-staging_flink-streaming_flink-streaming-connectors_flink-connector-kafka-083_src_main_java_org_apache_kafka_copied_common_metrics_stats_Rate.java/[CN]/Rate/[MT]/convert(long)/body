{
switch (unit) {
case NANOSECONDS:
    return time * 1000.0 * 1000.0;
case MICROSECONDS:
  return time * 1000.0;
case MILLISECONDS:
return time;
case SECONDS:
return time / 1000.0;
case MINUTES:
return time / (60.0 * 1000.0);
case HOURS:
return time / (60.0 * 60.0 * 1000.0);
case DAYS:
return time / (24.0 * 60.0 * 60.0* 1000.0);
default :
throw new IllegalStateException("Unknown unit: " + unit);
}
}
