{
  ExternalProcessRunner processRunner=new ExternalProcessRunner(HDFSCopyFromLocal.class.getName(),new String[]{hadoopConfPath.getAbsolutePath(),localPath.getAbsolutePath(),remotePath.toString()});
  if (processRunner.run() != 0) {
    throw new RuntimeException("Error while copying to remote FileSystem: " + processRunner.getErrorOutput());
  }
}
