{
  if (pos >= path.depth() || pos < 0) {
    return null;
  }
  final String p=path.toUri().getPath();
  int count=0;
  int startPos=1;
  int endPos=-1;
  while (count <= pos) {
    if (endPos > 0) {
      startPos=endPos + 1;
    }
    endPos=p.indexOf(Path.SEPARATOR,startPos);
    if (endPos < 0) {
      break;
    }
    ++count;
  }
  if (endPos < 0) {
    endPos=p.length();
  }
  return p.substring(startPos,endPos);
}
