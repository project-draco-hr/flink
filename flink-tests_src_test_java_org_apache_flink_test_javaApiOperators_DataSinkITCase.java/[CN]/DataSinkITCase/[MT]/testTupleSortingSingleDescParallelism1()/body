{
  final ExecutionEnvironment env=ExecutionEnvironment.getExecutionEnvironment();
  DataSet<Tuple3<Integer,Long,String>> ds=CollectionDataSets.get3TupleDataSet(env);
  ds.writeAsCsv(resultPath).sortLocalOutput(0,Order.DESCENDING).setParallelism(1);
  env.execute();
  String expected="21,6,Comment#15\n" + "20,6,Comment#14\n" + "19,6,Comment#13\n"+ "18,6,Comment#12\n"+ "17,6,Comment#11\n"+ "16,6,Comment#10\n"+ "15,5,Comment#9\n"+ "14,5,Comment#8\n"+ "13,5,Comment#7\n"+ "12,5,Comment#6\n"+ "11,5,Comment#5\n"+ "10,4,Comment#4\n"+ "9,4,Comment#3\n"+ "8,4,Comment#2\n"+ "7,4,Comment#1\n"+ "6,3,Luke Skywalker\n"+ "5,3,I am fine.\n"+ "4,3,Hello world, how are you?\n"+ "3,2,Hello world\n"+ "2,2,Hello\n"+ "1,1,Hi\n";
  compareResultsByLinesInMemoryWithStrictOrder(expected,resultPath);
}
