{
  @SuppressWarnings("unchecked") final MutableObjectIterator<X> reader=(MutableObjectIterator<X>)this.broadcastInputIterators[inputNum];
  @SuppressWarnings("unchecked") final TypeSerializer<X> serializer=(TypeSerializer<X>)this.broadcastInputSerializers[inputNum];
  ArrayList<X> collection=new ArrayList<X>();
  X record=serializer.createInstance();
  while (this.running && ((record=reader.next(record)) != null)) {
    collection.add(record);
    record=serializer.createInstance();
  }
  context.setBroadcastVariable(bcVarName,collection);
}
