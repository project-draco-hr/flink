{
  Transformation transformation=new Transformation();
  transformation.addMapping(new ValueAssignment("target",new Arithmetic(new Path(new Input(0),new FieldAccess("a")),ArithmeticOperator.MULTIPLY,new Path(new Input(0),new FieldAccess("b")))));
  JsonParser parser=new JsonFactory().createJsonParser("{\"a\": 4, \"b\": 3}");
  parser.setCodec(new ObjectMapper());
  JsonNode value=parser.readValueAsTree();
  System.out.println(transformation.evaluate(value,new EvaluationContext()));
}
