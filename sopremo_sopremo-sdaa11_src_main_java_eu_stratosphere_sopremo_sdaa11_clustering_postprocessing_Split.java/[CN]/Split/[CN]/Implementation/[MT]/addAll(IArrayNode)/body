{
  int dist1, dist2;
  boolean drawToggle=false;
  for (  final IJsonNode pointNode : pointNodes) {
    final Point point=new Point();
    point.read(pointNode);
    dist1=this.representation1.getClustroid().getDistance(point);
    dist2=this.representation2.getClustroid().getDistance(point);
    if (dist1 <= dist2)     this.representation1.add(point);
 else     if (dist1 > dist2)     this.representation2.add(point);
 else     if (drawToggle^=true)     this.representation1.add(point);
 else     this.representation2.add(point);
  }
}
