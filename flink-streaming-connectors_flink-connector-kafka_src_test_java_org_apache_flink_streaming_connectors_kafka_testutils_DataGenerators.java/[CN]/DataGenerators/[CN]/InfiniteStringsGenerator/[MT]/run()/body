{
  FlinkKafkaProducer<String> producer=null;
  try {
    producer=new FlinkKafkaProducer<>(kafkaConnectionString,topic,new SimpleStringSchema());
    producer.setRuntimeContext(new MockRuntimeContext(1,0));
    producer.open(new Configuration());
    final StringBuilder bld=new StringBuilder();
    final Random rnd=new Random();
    while (running) {
      bld.setLength(0);
      int len=rnd.nextInt(100) + 1;
      for (int i=0; i < len; i++) {
        bld.append((char)(rnd.nextInt(20) + 'a'));
      }
      String next=bld.toString();
      producer.invoke(next);
    }
  }
 catch (  Throwable t) {
    this.error=t;
  }
 finally {
    if (producer != null) {
      try {
        producer.close();
      }
 catch (      Throwable t) {
      }
    }
  }
}
