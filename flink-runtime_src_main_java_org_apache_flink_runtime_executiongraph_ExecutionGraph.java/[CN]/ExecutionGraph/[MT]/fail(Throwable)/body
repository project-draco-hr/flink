{
  while (true) {
    JobStatus current=state;
    if (current == JobStatus.FAILED || current == JobStatus.FAILING) {
      return;
    }
 else     if (transitionState(current,JobStatus.FAILING,t)) {
      this.failureCause=t;
      for (      ExecutionJobVertex ejv : verticesInCreationOrder) {
        ejv.cancel();
      }
      return;
    }
  }
}
