{
  if (operator instanceof Projection && operator.getTransformation() instanceof ObjectCreation) {
    ObjectCreation objectCreation=(ObjectCreation)operator.getTransformation();
    if (objectCreation.getMappingSize() == 1 && objectCreation.getMapping(0).getExpression() instanceof Input) {
      Operator coreInput=operator.getInputOperators().get(((Input)objectCreation.getMapping(0).getExpression()).getIndex());
      Iterator<Entry<String,Binding>> iterator=OperatorParser.this.queryParser.bindings.getAll().entrySet().iterator();
      while (iterator.hasNext()) {
        Binding binding=iterator.next().getValue();
        if (binding.getTransformed() == operator)         binding.setTransformed(coreInput);
      }
      this.inputAliases.set(inputIndex,objectCreation.getMapping(0).getTarget());
      return coreInput;
    }
  }
  return operator;
}
