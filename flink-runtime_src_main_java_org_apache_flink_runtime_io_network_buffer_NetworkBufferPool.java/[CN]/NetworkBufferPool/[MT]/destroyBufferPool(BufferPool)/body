{
synchronized (factoryLock) {
    if (allBufferPools.remove(bufferPool)) {
      managedBufferPools.remove(bufferPool);
      numTotalRequiredBuffers-=bufferPool.getNumberOfRequiredMemorySegments();
      try {
        redistributeBuffers();
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  }
}
