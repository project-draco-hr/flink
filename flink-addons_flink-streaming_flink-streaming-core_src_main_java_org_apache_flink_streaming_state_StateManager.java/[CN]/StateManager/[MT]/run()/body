{
  ObjectOutputStream oos=null;
  try {
    oos=new ObjectOutputStream(new FileOutputStream(filename));
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
  while (true) {
    try {
      Thread.sleep(checkpointInterval);
      for (      Object state : stateList) {
        oos.writeObject(state);
        oos.flush();
      }
    }
 catch (    Exception e) {
      throw new RuntimeException(e);
    }
  }
}
