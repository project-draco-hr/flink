{
  List<IN> tupleBatch=new ArrayList<IN>();
  boolean batchStart;
  int counter=0;
  while (loadNextRecord() != null) {
    batchStart=true;
    do {
      if (batchStart) {
        batchStart=false;
      }
 else {
        reuse=loadNextRecord();
        if (reuse == null) {
          break;
        }
      }
      counter++;
      tupleBatch.add(reuse.getObject());
      resetReuse();
    }
 while (counter < batchSize);
    reducer.reduce(tupleBatch,collector);
    tupleBatch.clear();
    counter=0;
  }
}
