{
  return new Deserializer<T>(){
    private DataInput input;
    @Override public void open(    DataInput input) throws IOException {
      this.input=input;
    }
    @Override public void close() throws IOException {
    }
    @Override public T deserialize(    T readable) throws IOException {
      if (readable == null) {
        readable=newInstance();
      }
      readable.read(input);
      return readable;
    }
  }
;
}
