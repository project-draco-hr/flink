{
  final JobID jobID=new JobID();
  final JobVertexID vertexID=new JobVertexID();
  final ExecutionAttemptID executionID=new ExecutionAttemptID();
  final FiniteDuration timeout=new FiniteDuration(10,TimeUnit.SECONDS);
  final ActorGateway gateway=new NullInputSplitGateway();
  final TaskInputSplitProvider provider=new TaskInputSplitProvider(gateway,jobID,vertexID,executionID,getClass().getClassLoader(),timeout);
  InputSplit nextInputSplit=provider.getNextInputSplit();
  assertTrue(nextInputSplit == null);
}
