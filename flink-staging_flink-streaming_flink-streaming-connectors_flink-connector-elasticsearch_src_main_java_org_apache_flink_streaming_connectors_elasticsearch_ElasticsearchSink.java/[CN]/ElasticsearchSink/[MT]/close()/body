{
  if (bulkProcessor != null) {
    bulkProcessor.close();
    bulkProcessor=null;
  }
  if (client != null) {
    client.close();
  }
  if (node != null) {
    node.close();
  }
  if (hasFailure.get()) {
    Throwable cause=failureThrowable.get();
    if (cause != null) {
      throw new RuntimeException("An error occured in ElasticsearchSink.",cause);
    }
 else {
      throw new RuntimeException("An error occured in ElasticsearchSink.");
    }
  }
}
