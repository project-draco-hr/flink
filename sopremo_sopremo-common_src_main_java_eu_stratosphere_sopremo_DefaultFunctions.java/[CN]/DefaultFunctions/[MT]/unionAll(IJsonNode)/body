{
  boolean hasStream=false;
  for (  final IJsonNode param : arrays) {
    final boolean stream=param instanceof ArrayNode;
    hasStream|=stream;
  }
  if (hasStream) {
    final Iterator<?>[] iterators=new Iterator[arrays.length];
    for (int index=0; index < iterators.length; index++)     iterators[index]=((ArrayNode)arrays[index]).iterator();
    return ArrayNode.valueOf(new ConcatenatingIterator<IJsonNode>(iterators));
  }
  final ArrayNode union=new ArrayNode();
  for (  final IJsonNode param : arrays)   for (  final IJsonNode child : (IArrayNode)param)   union.add(child);
  return union;
}
