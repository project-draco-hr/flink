{
  this.operatorClass=operatorClass;
  try {
    PropertyDescriptor[] propertyDescriptors=Introspector.getBeanInfo(operatorClass).getPropertyDescriptors();
    for (    PropertyDescriptor propertyDescriptor : propertyDescriptors)     if (propertyDescriptor.getWriteMethod() != null || propertyDescriptor instanceof IndexedPropertyDescriptor && ((IndexedPropertyDescriptor)propertyDescriptor).getIndexedWriteMethod() != null) {
      String name=OperatorFactory.this.propertyNameChooser.choose((String[])propertyDescriptor.getValue(Operator.Info.NAME_NOUNS),(String[])propertyDescriptor.getValue(Operator.Info.NAME_VERB),(String[])propertyDescriptor.getValue(Operator.Info.NAME_ADJECTIVE),(String[])propertyDescriptor.getValue(Operator.Info.NAME_PREPOSITION));
      if (name == null)       name=propertyDescriptor.getName();
      if (propertyDescriptor.getValue(Operator.Info.INPUT) == Boolean.TRUE)       this.inputProperties.put(name,propertyDescriptor);
 else       this.operatorProperties.put(name,propertyDescriptor);
    }
  }
 catch (  IntrospectionException e) {
    e.printStackTrace();
  }
}
