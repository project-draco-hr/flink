{
  if (shiftBy > 0 && shiftBy < counters_.length) {
    pointer_=Util.mod((pointer_ - shiftBy),counters_.length);
    for (int i=0; i < shiftBy; ++i) {
      toZero(i);
    }
  }
 else   if (shiftBy >= counters_.length) {
    pointer_=0;
    for (int i=0; i < counters_.length; ++i) {
      toZero(i);
    }
  }
}
