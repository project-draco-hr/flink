{
  DataSet<Vertex<K,LongValue>> targetIds=input.getEdges().map(new MapEdgeToTargetId<K,EV>()).setParallelism(parallelism).name("Map edge to target ID");
  DataSet<Vertex<K,LongValue>> targetDegree=targetIds.groupBy(0).reduce(new DegreeCount<K>()).setParallelism(parallelism).name("Degree count");
  if (includeZeroDegreeVertices) {
    targetDegree=input.getVertices().leftOuterJoin(targetDegree).where(0).equalTo(0).with(new JoinVertexWithVertexDegree<K,VV>()).setParallelism(parallelism).name("Join zero degree vertices");
  }
  return targetDegree;
}
