{
  try {
synchronized (this.globalInputSplitProvider) {
      final InputSplitWrapper wrapper=this.globalInputSplitProvider.requestNextInputSplit(this.jobID,this.executionVertexID,new IntegerRecord(this.sequenceNumber.getAndIncrement()));
      return wrapper.getInputSplit();
    }
  }
 catch (  IOException ioe) {
    throw new RuntimeException(StringUtils.stringifyException(ioe));
  }
}
