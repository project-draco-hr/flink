{
  final int[] substitutionRowsums=this.calculateSubstitutionRowsums(representative);
  int highestDistance=0;
  int substitutionIndex=-1;
  for (int i=0; i < this.entries.length; i++) {
    final int distance=substitutionRowsums[i] - this.entries[i].rowsum;
    if (distance > highestDistance) {
      highestDistance=distance;
      substitutionIndex=i;
    }
  }
  return substitutionIndex;
}
