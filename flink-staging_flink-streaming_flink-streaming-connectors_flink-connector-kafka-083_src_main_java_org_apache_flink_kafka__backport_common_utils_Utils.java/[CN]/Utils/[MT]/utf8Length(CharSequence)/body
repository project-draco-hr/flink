{
  int count=0;
  for (int i=0, len=s.length(); i < len; i++) {
    char ch=s.charAt(i);
    if (ch <= 0x7F) {
      count++;
    }
 else     if (ch <= 0x7FF) {
      count+=2;
    }
 else     if (Character.isHighSurrogate(ch)) {
      count+=4;
      ++i;
    }
 else {
      count+=3;
    }
  }
  return count;
}
