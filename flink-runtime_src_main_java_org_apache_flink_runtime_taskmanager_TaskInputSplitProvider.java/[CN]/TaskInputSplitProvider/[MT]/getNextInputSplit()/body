{
  try {
    Future<Object> futureResponse=Patterns.ask(jobmanager,new JobManagerMessages.RequestNextInputSplit(jobId,vertexId),AkkaUtils.FUTURE_TIMEOUT());
    TaskManagerMessages.NextInputSplit nextInputSplit=(TaskManagerMessages.NextInputSplit)Await.result(futureResponse,AkkaUtils.AWAIT_DURATION());
    return nextInputSplit.inputSplit();
  }
 catch (  Exception e) {
    throw new RuntimeException("Requesting the next InputSplit failed.",e);
  }
}
