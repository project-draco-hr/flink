{
  GenericDataSource<UniformIntInput> source1=new GenericDataSource<UniformIntInput>(new UniformIntInput(),"Source 1");
  source1.setParameter(UniformIntInput.NUM_KEYS_KEY,50000);
  source1.setParameter(UniformIntInput.NUM_VALUES_KEY,100);
  GenericDataSource<UniformIntInput> source2=new GenericDataSource<UniformIntInput>(new UniformIntInput(),"Source 2");
  source2.setParameter(UniformIntInput.NUM_KEYS_KEY,50000);
  source2.setParameter(UniformIntInput.NUM_VALUES_KEY,100);
  JoinOperator matcher=JoinOperator.builder(SimpleMatcher.class,PactInteger.class,0,0).input1(source1).input2(source2).name("Long Cancelling Sort Join").build();
  GenericDataSink sink=new GenericDataSink(new DiscardingOutputFormat(),matcher,"Sink");
  Plan p=new Plan(sink);
  p.setDefaultParallelism(4);
  runAndCancelJob(p,30 * 1000,30 * 1000);
}
