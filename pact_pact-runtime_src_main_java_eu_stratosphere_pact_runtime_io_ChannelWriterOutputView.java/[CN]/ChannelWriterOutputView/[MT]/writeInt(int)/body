{
  if (this.positionInSegment < this.segmentSize - 3) {
    this.currentSegment.putInt(this.positionInSegment,v);
    this.positionInSegment+=4;
  }
 else   if (this.positionInSegment == this.segmentSize) {
    nextSegment();
    this.currentSegment.putInt(this.positionInSegment,v);
    this.positionInSegment+=4;
  }
 else {
    writeByte(v >> 24);
    writeByte(v >> 16);
    writeByte(v >> 8);
    writeByte(v);
  }
}
