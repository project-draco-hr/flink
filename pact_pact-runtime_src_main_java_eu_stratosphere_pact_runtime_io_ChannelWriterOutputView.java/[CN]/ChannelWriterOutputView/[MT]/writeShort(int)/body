{
  if (this.positionInSegment < this.segmentSize - 1) {
    this.currentSegment.putShort(this.positionInSegment,(short)v);
    this.positionInSegment+=2;
  }
 else   if (this.positionInSegment == this.segmentSize) {
    nextSegment();
    this.currentSegment.putShort(this.positionInSegment,(short)v);
    this.positionInSegment+=2;
  }
 else {
    writeByte(v >> 8);
    writeByte(v);
  }
}
