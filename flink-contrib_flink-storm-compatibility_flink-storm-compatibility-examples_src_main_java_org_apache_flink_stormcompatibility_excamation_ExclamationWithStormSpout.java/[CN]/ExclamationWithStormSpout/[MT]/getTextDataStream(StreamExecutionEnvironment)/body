{
  if (fileOutput) {
    final String[] tokens=textPath.split(":");
    final String localFile=tokens[tokens.length - 1];
    return env.addSource(new FiniteStormSpoutWrapper<String>(new FiniteStormFileSpout(localFile),new String[]{Utils.DEFAULT_STREAM_ID}),TypeExtractor.getForClass(String.class)).setParallelism(1);
  }
  return env.addSource(new FiniteStormSpoutWrapper<String>(new FiniteStormInMemorySpout(WordCountData.WORDS),new String[]{Utils.DEFAULT_STREAM_ID}),TypeExtractor.getForClass(String.class)).setParallelism(1);
}
