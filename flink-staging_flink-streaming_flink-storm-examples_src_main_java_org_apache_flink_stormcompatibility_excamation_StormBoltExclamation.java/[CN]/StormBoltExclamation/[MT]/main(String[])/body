{
  if (!parseParameters(args)) {
    return;
  }
  final StreamExecutionEnvironment env=StreamExecutionEnvironment.getExecutionEnvironment();
  final DataStream<String> text=getTextDataStream(env);
  final DataStream<String> exclaimed=text.transform("StormBoltTokenizer",TypeExtractor.getForObject(""),new StormBoltWrapper<String,String>(new ExclamationBolt(),true)).map(new ExclamationMap());
  if (fileOutput) {
    exclaimed.writeAsText(outputPath);
  }
 else {
    exclaimed.print();
  }
  env.execute("Streaming WordCount with Storm bolt tokenizer");
}
