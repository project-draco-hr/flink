{
  int numSubtasks=(args.length > 0 ? Integer.parseInt(args[0]) : 1);
  String recordsPath=(args.length > 1 ? args[1] : "");
  String output=(args.length > 2 ? args[2] : "");
  FileDataSource source=new FileDataSource(RecordInputFormat.class,recordsPath);
  source.setDegreeOfParallelism(numSubtasks);
  RecordInputFormat.configureRecordFormat(source).recordDelimiter('\n').fieldDelimiter('|').field(DecimalTextIntParser.class,0);
  FileDataSink sink=new FileDataSink(RecordOutputFormat.class,output);
  sink.setDegreeOfParallelism(numSubtasks);
  RecordOutputFormat.configureRecordFormat(sink).recordDelimiter('\n').fieldDelimiter('|').lenient(true).field(PactInteger.class,0);
  sink.setGlobalOrder(new Ordering(0,PactInteger.class,Order.ASCENDING),new UniformDistribution());
  sink.setInput(source);
  return new Plan(sink);
}
