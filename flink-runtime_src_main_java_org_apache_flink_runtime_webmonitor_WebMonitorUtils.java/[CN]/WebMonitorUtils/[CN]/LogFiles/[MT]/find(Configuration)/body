{
  if (INSTANCE == null) {
    final String logEnv="log.file";
    String logFilePath=System.getProperty(logEnv);
    if (logFilePath == null) {
      LOG.warn("Log file environment variable '{}' is not set.",logEnv);
      logFilePath=config.getString(ConfigConstants.JOB_MANAGER_WEB_LOG_PATH_KEY,null);
    }
    if (logFilePath == null) {
      throw new IllegalConfigurationException("JobManager log file not found. " + "Can't serve log files. Log file location couldn't be determined via the " + logEnv + " environment variable or the config constant "+ ConfigConstants.JOB_MANAGER_WEB_LOG_PATH_KEY);
    }
    INSTANCE=new LogFiles(logFilePath);
  }
  return INSTANCE;
}
