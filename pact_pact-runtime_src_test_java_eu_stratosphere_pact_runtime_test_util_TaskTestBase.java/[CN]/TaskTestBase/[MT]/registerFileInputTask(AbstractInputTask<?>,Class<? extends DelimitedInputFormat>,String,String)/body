{
  TaskConfig dsConfig=new TaskConfig(mockEnv.getTaskConfiguration());
  dsConfig.setStubClass(stubClass);
  dsConfig.setStubParameter(FileInputFormat.FILE_PARAMETER_KEY,inPath);
