{
  final MemoryManager memoryManager=getEnvironment().getMemoryManager();
  final IOManager ioManager=getEnvironment().getIOManager();
  RecordReader<KeyValuePair<K,V1>> reader1=getReader1();
  RecordReader<KeyValuePair<K,V2>> reader2=getReader2();
switch (config.getLocalStrategy()) {
case SORTMERGE:
    return new SortMergeCoGroupIterator<K,V1,V2>(memoryManager,ioManager,reader1,reader2,ikClass,iv1Class,iv2Class,NUM_SORT_BUFFERS,SIZE_SORT_BUFFER,MEMORY_IO,MAX_NUM_FILEHANLDES,this);
default :
  throw new RuntimeException("Unknown local strategy for CoGroupTask");
}
}
