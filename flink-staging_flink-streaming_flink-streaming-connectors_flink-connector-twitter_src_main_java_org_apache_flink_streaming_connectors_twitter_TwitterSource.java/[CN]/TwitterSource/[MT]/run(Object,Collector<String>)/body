{
  while (isRunning) {
    if (client.isDone()) {
      if (LOG.isErrorEnabled()) {
        LOG.error("Client connection closed unexpectedly: {}",client.getExitEvent().getMessage());
      }
      break;
    }
    out.collect(queue.take());
    if (maxNumberOfTweets != -1 && currentNumberOfTweets >= maxNumberOfTweets) {
      break;
    }
  }
}
