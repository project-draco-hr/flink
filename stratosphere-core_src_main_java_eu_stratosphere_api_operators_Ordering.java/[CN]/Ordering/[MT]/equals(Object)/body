{
  if (this == obj)   return true;
  if (obj == null)   return false;
  if (getClass() != obj.getClass())   return false;
  Ordering other=(Ordering)obj;
  if (indexes == null) {
    if (other.indexes != null)     return false;
  }
 else   if (!indexes.equals(other.indexes))   return false;
  if (orders == null) {
    if (other.orders != null)     return false;
  }
 else   if (!orders.equals(other.orders))   return false;
  if (types == null) {
    if (other.types != null)     return false;
  }
 else   if (!types.equals(other.types))   return false;
  return true;
}
