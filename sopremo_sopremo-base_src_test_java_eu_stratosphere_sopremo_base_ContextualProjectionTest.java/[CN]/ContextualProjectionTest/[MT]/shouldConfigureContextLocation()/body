{
  final SopremoTestPlan sopremoPlan=new SopremoTestPlan(2,1);
  sopremoPlan.getOutputOperator(0).setInputs(new ContextualProjection().withContextPath(new ArrayAccess(2)).withInputs(sopremoPlan.getInputOperators(0,2)));
  sopremoPlan.getInput(0).addArray(1,4).addArray(2,5).addArray(-1,4);
  sopremoPlan.getInput(1).addValue(42);
  sopremoPlan.getExpectedOutput(0).addArray(1,4,42).addArray(2,5,42).addArray(-1,4,42);
  sopremoPlan.run();
}
