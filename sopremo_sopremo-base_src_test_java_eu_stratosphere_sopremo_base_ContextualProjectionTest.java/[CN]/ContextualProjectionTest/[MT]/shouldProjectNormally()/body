{
  final SopremoTestPlan sopremoPlan=new SopremoTestPlan(2,1);
  final ObjectCreation transformation=new ObjectCreation();
  transformation.addMapping("sum",new ArithmeticExpression(createPath("a"),ArithmeticOperator.ADDITION,createPath("b")));
  sopremoPlan.getOutputOperator(0).setInputs(new ContextualProjection().withResultProjection(transformation).withInputs(sopremoPlan.getInputOperators(0,2)));
  sopremoPlan.getInput(0).addObject("a",1,"b",4).addObject("a",2,"b",5).addObject("a",-1,"b",4);
  sopremoPlan.getInput(1).addValue(42);
  sopremoPlan.getExpectedOutput(0).addObject("sum",5).addObject("sum",7).addObject("sum",3);
  sopremoPlan.run();
}
