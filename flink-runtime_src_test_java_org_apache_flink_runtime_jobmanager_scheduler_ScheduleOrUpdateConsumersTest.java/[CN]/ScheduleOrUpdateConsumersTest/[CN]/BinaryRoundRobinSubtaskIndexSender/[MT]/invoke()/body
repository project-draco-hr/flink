{
  final IntegerRecord subtaskIndex=new IntegerRecord(getEnvironment().getIndexInSubtaskGroup());
  for (  RecordWriter<IntegerRecord> writer : writers) {
    try {
      for (int i=0; i < numberOfTimesToSend; i++) {
        writer.emit(subtaskIndex);
      }
      writer.flush();
    }
  finally {
      writer.clearBuffers();
    }
  }
}
