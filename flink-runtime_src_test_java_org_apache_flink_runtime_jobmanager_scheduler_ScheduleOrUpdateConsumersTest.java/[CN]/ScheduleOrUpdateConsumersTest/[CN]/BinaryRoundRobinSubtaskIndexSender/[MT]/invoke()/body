{
  final IntValue subtaskIndex=new IntValue(getEnvironment().getTaskInfo().getIndexOfThisSubtask());
  for (  RecordWriter<IntValue> writer : writers) {
    try {
      for (int i=0; i < numberOfTimesToSend; i++) {
        writer.emit(subtaskIndex);
      }
      writer.flush();
    }
  finally {
      writer.clearBuffers();
    }
  }
}
