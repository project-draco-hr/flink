{
  CommandLine cmd=this.parse(args);
  this.loadConfig(cmd);
  this.initConnection(cmd);
  this.loadScript(cmd);
  final ExecutionResponse response=this.sendScript();
  if (response.getStatus() == ExecutionStatus.ERROR)   this.dealWithError(null,"Script contains errors: " + response.getDetails());
 else   if (cmd.hasOption("wait"))   this.waitForCompletion(cmd,response);
 else   System.out.println("Successfully submitted script");
}
