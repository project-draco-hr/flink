{
  if (LOG.isDebugEnabled()) {
    LOG.debug("Writing checkpointing meta data to directory " + this.checkpointPath);
  }
  if (!this.distributed) {
    final FileOutputStream fos=new FileOutputStream(this.checkpointPath.toUri().getPath() + Path.SEPARATOR + CheckpointUtils.METADATA_PREFIX+ "_"+ this.vertexID+ suffix);
    return fos.getChannel();
  }
  return new FileChannelWrapper(this.fileSystem,this.checkpointPath.suffix(Path.SEPARATOR + CheckpointUtils.METADATA_PREFIX + "_"+ this.vertexID+ suffix),BUFFER_SIZE,(short)2);
}
