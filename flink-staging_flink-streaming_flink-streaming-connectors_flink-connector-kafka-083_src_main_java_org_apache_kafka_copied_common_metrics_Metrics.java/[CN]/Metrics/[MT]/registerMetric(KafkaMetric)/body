{
  MetricName metricName=metric.metricName();
  if (this.metrics.containsKey(metricName))   throw new IllegalArgumentException("A metric named '" + metricName + "' already exists, can't register another one.");
  this.metrics.put(metricName,metric);
  for (  MetricsReporter reporter : reporters)   reporter.metricChange(metric);
}
