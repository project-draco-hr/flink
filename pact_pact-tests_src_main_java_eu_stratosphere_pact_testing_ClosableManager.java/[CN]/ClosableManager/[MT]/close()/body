{
  List<IOException> exceptions=null;
  for (  Closeable closeable : closeables) {
    try {
      closeable.close();
    }
 catch (    IOException e) {
      if (exceptions == null)       exceptions=new ArrayList<IOException>();
      exceptions.add(e);
    }
  }
  closeables.clear();
  if (exceptions != null)   throw new IOException("exception(s) while closing: " + exceptions);
}
