{
  Path p=new Path("/my/abs/path");
  assertTrue(p.isAbsolute());
  p=new Path("./my/rel/path");
  assertFalse(p.isAbsolute());
  p=new Path("C:/my/abs/windows/path");
  assertTrue(p.isAbsolute());
  p=new Path("file:/C:");
  assertTrue(p.isAbsolute());
  p=new Path("C:");
  assertTrue(p.isAbsolute());
}
