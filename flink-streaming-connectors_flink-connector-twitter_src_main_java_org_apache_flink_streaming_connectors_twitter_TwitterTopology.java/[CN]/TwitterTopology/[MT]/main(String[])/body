{
  String path;
  if (args != null && args.length == 1) {
    path=args[0];
  }
 else {
    System.err.println("USAGE:\nTwitterLocal <pathToPropertiesFile>");
    return;
  }
  StreamExecutionEnvironment env=StreamExecutionEnvironment.getExecutionEnvironment();
  DataStream<String> streamSource=env.addSource(new TwitterSource(path,NUMBEROFTWEETS));
  DataStream<Tuple2<String,Integer>> dataStream=streamSource.flatMap(new SelectLanguageFlatMap()).map(new MapFunction<String,Tuple2<String,Integer>>(){
    private static final long serialVersionUID=1L;
    @Override public Tuple2<String,Integer> map(    String value) throws Exception {
      return new Tuple2<>(value,1);
    }
  }
).keyBy(0).sum(1);
  dataStream.print();
  env.execute();
}
