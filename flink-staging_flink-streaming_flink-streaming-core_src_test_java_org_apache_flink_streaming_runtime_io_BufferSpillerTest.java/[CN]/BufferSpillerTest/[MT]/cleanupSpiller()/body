{
  if (spiller != null) {
    try {
      spiller.close();
    }
 catch (    Exception e) {
      e.printStackTrace();
      fail("Cannot properly close the BufferSpiller: " + e.getMessage());
    }
    assertFalse(spiller.getCurrentChannel().isOpen());
    assertFalse(spiller.getCurrentSpillFile().exists());
  }
}
