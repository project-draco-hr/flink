{
  ExecutionStateTransition.checkTransition(false,getTaskName(),this.executionState,newExecutionState);
  if (newExecutionState == ExecutionState.FAILED) {
    LOG.error(optionalMessage);
  }
  final Iterator<ExecutionListener> it=this.registeredListeners.iterator();
  while (it.hasNext()) {
    it.next().executionStateChanged(this.environment.getJobID(),this.vertexID,newExecutionState,optionalMessage);
  }
  this.executionState=newExecutionState;
  this.taskManager.executionStateChanged(this.environment.getJobID(),this.vertexID,newExecutionState,optionalMessage);
}
