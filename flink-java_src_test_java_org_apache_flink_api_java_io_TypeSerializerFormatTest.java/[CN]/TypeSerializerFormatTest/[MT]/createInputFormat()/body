{
  Configuration configuration=new Configuration();
  configuration.setLong(BinaryInputFormat.BLOCK_SIZE_PARAMETER_KEY,this.blockSize);
  final TypeSerializerInputFormat<Tuple2<Integer,String>> inputFormat=new TypeSerializerInputFormat<Tuple2<Integer,String>>(serializer);
  inputFormat.setFilePath(this.tempFile.toURI().toString());
  inputFormat.configure(configuration);
  return inputFormat;
}
