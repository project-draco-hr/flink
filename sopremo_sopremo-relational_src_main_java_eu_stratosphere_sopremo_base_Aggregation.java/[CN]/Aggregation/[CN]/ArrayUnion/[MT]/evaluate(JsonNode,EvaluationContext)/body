{
  Iterator<JsonNode> arrays=node.iterator();
  ArrayNode mergedArray=JsonUtil.NODE_FACTORY.arrayNode();
  while (arrays.hasNext()) {
    JsonNode array=arrays.next();
    for (int index=0; index < array.size(); index++) {
      if (mergedArray.size() <= index)       mergedArray.add(JsonUtil.NODE_FACTORY.arrayNode());
      if (!array.get(index).isNull())       ((ArrayNode)mergedArray.get(index)).add(array.get(index));
    }
  }
  return mergedArray;
}
