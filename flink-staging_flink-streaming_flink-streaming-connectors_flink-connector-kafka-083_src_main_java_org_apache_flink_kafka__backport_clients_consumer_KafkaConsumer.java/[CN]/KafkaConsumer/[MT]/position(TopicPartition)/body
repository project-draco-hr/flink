{
  acquire();
  try {
    if (!this.subscriptions.assignedPartitions().contains(partition))     throw new IllegalArgumentException("You can only check the position for partitions assigned to this consumer.");
    Long offset=this.subscriptions.consumed(partition);
    if (offset == null) {
      updateFetchPositions(Collections.singleton(partition));
      return this.subscriptions.consumed(partition);
    }
 else {
      return offset;
    }
  }
  finally {
    release();
  }
}
