{
  outTypeSerializer=outTypeInfo.createSerializer(executionConfig);
  ByteArrayOutputStream baos=new ByteArrayOutputStream();
  OutputViewDataOutputStreamWrapper out=new OutputViewDataOutputStreamWrapper(new DataOutputStream(baos));
  try {
    outTypeSerializer.serialize(accumulator,out);
  }
 catch (  IOException ioe) {
    throw new RuntimeException("Unable to serialize initial value of type " + accumulator.getClass().getSimpleName() + " of fold operator.",ioe);
  }
  serializedInitialValue=baos.toByteArray();
}
