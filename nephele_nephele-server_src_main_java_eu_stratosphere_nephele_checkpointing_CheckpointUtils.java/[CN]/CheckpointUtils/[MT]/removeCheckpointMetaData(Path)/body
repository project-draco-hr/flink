{
  boolean removed=false;
  Path p=pathPrefix.suffix("_part");
  FileSystem fs=p.getFileSystem();
  if (fs.exists(p)) {
    fs.delete(p,false);
    removed=true;
  }
  int suffix=0;
  while (true) {
    p=pathPrefix.suffix("_" + suffix++);
    if (fs.exists(p)) {
      fs.delete(p,false);
      removed=true;
    }
 else {
      break;
    }
  }
  p=pathPrefix.suffix(COMPLETED_CHECKPOINT_SUFFIX);
  if (fs.exists(p)) {
    fs.delete(p,false);
    removed=true;
  }
  return removed;
}
