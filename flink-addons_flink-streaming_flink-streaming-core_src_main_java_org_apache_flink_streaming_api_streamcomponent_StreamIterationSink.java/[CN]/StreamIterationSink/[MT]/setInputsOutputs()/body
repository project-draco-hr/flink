{
  try {
    setConfigInputs();
    setSinkSerializer();
    inputIter=createInputIterator(inputs,inputSerializer);
    iterationId=configuration.getIterationId();
    iterationWaitTime=configuration.getIterationWaitTime();
    shouldWait=iterationWaitTime > 0;
    dataChannel=BlockingQueueBroker.instance().get(iterationId);
  }
 catch (  Exception e) {
    throw new StreamComponentException(String.format("Cannot register inputs of StreamIterationSink %s",iterationId),e);
  }
}
