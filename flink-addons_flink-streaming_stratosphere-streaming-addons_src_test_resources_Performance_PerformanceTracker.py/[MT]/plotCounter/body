def plotCounter(csv_dir, sname='', smooth=5, savePath=''):
    counters = readFiles(csv_dir)
    addSpeed(counters)
    selectedCounters = []
    for (name, number, df) in counters:
        if (sname in name):
            selectedCounters.append((name, number, df))
    if (sname == ''):
        sname = 'counters'
    save = (savePath != '')
    plotDfs(selectedCounters, smooth, save, ((savePath + '/') + sname))
