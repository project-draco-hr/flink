{
  while (isRunning) {
    int next;
    try {
      next=recordIterator.next(reuse1,reuse2);
    }
 catch (    IOException e) {
      if (isRunning) {
        throw e;
      }
 else {
        next=0;
      }
    }
    if (next == 0) {
      break;
    }
 else     if (next == 1) {
      initialize1();
      handleStream1();
      resetReuse1();
    }
 else {
      initialize2();
      handleStream2();
      resetReuse2();
    }
  }
}
