{
  costs.setNetworkCost(0);
  long s1=0, s2=0;
  for (  PactConnection c : input1)   s1+=c.getSourcePact().getEstimatedOutputSize() * c.getReplicationFactor();
  for (  PactConnection c : input2)   s2+=c.getSourcePact().getEstimatedOutputSize() * c.getReplicationFactor();
  costs.setSecondaryStorageCost(s1 < 0 || s2 < 0 ? -1 : 2 * (s1 + s2));
}
