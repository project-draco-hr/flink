{
switch (indices.length) {
case 0:
    return new ArrayCreation();
case 1:
  return new ArrayCreation(new ArrayAccess(indices[0]));
default :
boolean monoton=true;
final int step=indices[1] - indices[0];
if (Math.abs(step) != 1) monoton=false;
for (int index=2; monoton && index < indices.length; index+=step) monoton=indices[index] - indices[index - 1] == step;
if (monoton) return new ArrayAccess(indices[0],indices[indices.length - 1]);
final ArrayAccess[] accesses=new ArrayAccess[indices.length];
for (int index=0; index < indices.length; index++) accesses[index]=new ArrayAccess(indices[index]);
return new ArrayCreation();
}
}
