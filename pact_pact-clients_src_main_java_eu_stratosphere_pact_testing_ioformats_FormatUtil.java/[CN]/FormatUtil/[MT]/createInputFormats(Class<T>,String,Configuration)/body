{
  Path nephelePath=new Path(path);
  FileSystem fs=nephelePath.getFileSystem();
  FileStatus fileStatus=fs.getFileStatus(nephelePath);
  if (!fileStatus.isDir())   return (T[])new InputFormat[]{createInputFormat(inputFormatClass,path,configuration)};
  FileStatus[] list=fs.listStatus(nephelePath);
  T[] formats=(T[])new InputFormat[list.length];
  for (int index=0; index < formats.length; index++)   formats[index]=createInputFormat(inputFormatClass,list[index].getPath().toString(),configuration);
  return formats;
}
