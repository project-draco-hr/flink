{
  ExternalProcessRunner processRunner=new ExternalProcessRunner(HDFSCopyToLocal.class.getName(),new String[]{hadoopConfPath.getAbsolutePath(),remotePath.toString(),localPath.getAbsolutePath()});
  if (processRunner.run() != 0) {
    throw new RuntimeException("Error while copying from remote FileSystem: " + processRunner.getErrorOutput());
  }
}
