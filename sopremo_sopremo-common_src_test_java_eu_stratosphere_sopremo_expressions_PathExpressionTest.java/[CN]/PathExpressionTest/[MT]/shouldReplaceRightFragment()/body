{
  final PathExpression expr=new PathExpression(new ObjectAccess("glossary"),new ObjectAccess("GlossDiv"),new ObjectAccess("GlossList"),new ObjectAccess("GlossEntry"),new ObjectAccess("ID"));
  expr.replace(new ObjectAccess("ID"),new ObjectAccess("GlossSee"));
  final IJsonNode result=expr.evaluate(doc,null,this.context);
  Assert.assertEquals(TextNode.valueOf("markup"),result);
}
