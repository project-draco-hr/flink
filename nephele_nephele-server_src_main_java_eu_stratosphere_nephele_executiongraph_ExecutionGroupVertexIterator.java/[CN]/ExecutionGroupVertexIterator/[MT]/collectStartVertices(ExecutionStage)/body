{
  for (int i=0; i < stage.getNumberOfStageMembers(); i++) {
    final ExecutionGroupVertex groupVertex=stage.getStageMember(i);
    if (forward) {
      if ((groupVertex.getNumberOfBackwardLinks() == 0) || ((this.stage >= 0) && allConnectionsFromOtherStage(groupVertex,true))) {
        this.entryVertices.add(groupVertex);
      }
    }
 else {
      if ((groupVertex.getNumberOfForwardLinks() == 0) || ((this.stage >= 0) && allConnectionsFromOtherStage(groupVertex,false))) {
        this.entryVertices.add(groupVertex);
      }
    }
  }
}
