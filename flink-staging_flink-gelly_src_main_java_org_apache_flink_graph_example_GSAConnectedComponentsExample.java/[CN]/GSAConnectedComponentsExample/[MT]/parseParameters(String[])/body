{
  if (args.length > 0) {
    fileOutput=true;
    if (args.length != 4) {
      System.err.println("Usage: GSAConnectedComponentsExample <vertex path> <edge path> " + "<result path> <max iterations>");
      return false;
    }
    vertexInputPath=args[0];
    edgeInputPath=args[1];
    outputPath=args[2];
    maxIterations=Integer.parseInt(args[3]);
  }
 else {
    System.out.println("Executing GSA Connected Components example with built-in default data.");
    System.out.println("  Provide parameters to read input data from files.");
    System.out.println("  See the documentation for the correct format of input files.");
    System.out.println("  Usage: GSAConnectedComponentsExample <vertex path> <edge path> " + "<result path> <max iterations>");
  }
  return true;
}
