{
  LOG.info("Canceling Task " + this.taskName);
  if (this.executingThread == null) {
    LOG.error("cancelExecution for " + this.taskName + " called without having created an execution thread before");
    return;
  }
  this.isCanceled=true;
  changeExecutionState(ExecutionState.CANCELING,null);
  try {
    this.invokable.cancel();
  }
 catch (  Exception e) {
    LOG.error(StringUtils.stringifyException(e));
  }
  while (true) {
    this.executingThread.interrupt();
    if (this.executionState == ExecutionState.CANCELED) {
      break;
    }
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException e) {
      break;
    }
  }
}
