{
  while (true) {
    boolean allClosed=true;
    for (int i=0; i < getNumberOfOutputGates(); i++) {
      final OutputGate<? extends Record> eog=getOutputGate(i);
      if (!eog.isClosed()) {
        allClosed=false;
      }
    }
    if (allClosed) {
      break;
    }
 else {
      try {
        Thread.sleep(SLEEPINTERVAL);
      }
 catch (      InterruptedException e) {
        LOG.debug(e);
      }
    }
  }
}
