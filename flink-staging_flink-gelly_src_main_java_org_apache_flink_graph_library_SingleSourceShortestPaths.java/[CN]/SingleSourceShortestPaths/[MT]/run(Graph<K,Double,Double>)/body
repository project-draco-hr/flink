{
  DataSet<Vertex<K,Double>> sourceVertex=input.getVertices().filter(new SelectVertex<K>(srcVertexId));
  DataSet<Vertex<K,Double>> verticesWithInitialDistance=sourceVertex.cross(input.getVertices()).map(new InitSrcVertex<K>());
  Graph<K,Double,Double> graph=Graph.create(verticesWithInitialDistance,input.getEdges(),ExecutionEnvironment.getExecutionEnvironment());
  return graph.runVertexCentricIteration(new VertexDistanceUpdater<K>(),new MinDistanceMessenger<K>(),maxIterations);
}
