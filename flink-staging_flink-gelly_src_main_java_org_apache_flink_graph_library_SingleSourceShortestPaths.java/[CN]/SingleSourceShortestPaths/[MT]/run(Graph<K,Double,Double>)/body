{
  Graph<K,Double,Double> mappedInput=input.mapVertices(new InitVerticesMapper<K>(srcVertexId));
  VertexCentricIteration<K,Double,Double,Double> iteration=mappedInput.createVertexCentricIteration(new VertexDistanceUpdater<K>(),new MinDistanceMessenger<K>(),maxIterations);
  return mappedInput.runVertexCentricIteration(iteration);
}
