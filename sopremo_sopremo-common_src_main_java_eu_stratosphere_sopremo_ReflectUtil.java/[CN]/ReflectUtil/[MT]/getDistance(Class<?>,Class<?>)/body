{
  if (superClass == subclass)   return 0;
  if (!superClass.isAssignableFrom(subclass))   return Integer.MAX_VALUE;
  if (superClass.isInterface()) {
    Class<?>[] interfaces=subclass.getInterfaces();
    int minDistance=Integer.MAX_VALUE;
    for (    Class<?> xface : interfaces) {
      if (xface == superClass) {
        minDistance=1;
        break;
      }
 else       if (superClass.isAssignableFrom(xface))       minDistance=Math.min(minDistance,getDistance(superClass,xface));
    }
    return minDistance;
  }
  int distance=1;
  for (Class<?> klazz=subclass; superClass != klazz; distance++)   klazz=klazz.getSuperclass();
  return distance;
}
