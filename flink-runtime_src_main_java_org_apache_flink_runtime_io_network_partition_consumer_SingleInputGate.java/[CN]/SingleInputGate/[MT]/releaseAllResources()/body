{
synchronized (requestLock) {
    if (!isReleased) {
      try {
        for (        InputChannel inputChannel : inputChannels.values()) {
          try {
            inputChannel.releaseAllResources();
          }
 catch (          IOException e) {
            LOG.warn("Error during release of channel resources: " + e.getMessage(),e);
          }
        }
        if (bufferPool != null) {
          bufferPool.lazyDestroy();
        }
      }
  finally {
        isReleased=true;
      }
    }
  }
}
