{
  try {
    target=SopremoUtil.reuseTarget(target,TextNode.class);
  }
 catch (  InstantiationException e) {
    target=new TextNode();
  }
catch (  IllegalAccessException e) {
    target=new TextNode();
  }
  ((TextNode)target).setValue(String.format(this.pattern,context.getTaskId(),this.id++));
  return target;
}
