{
  MemorySegmentDescriptor descriptor=descriptorReference.get();
  if (index >= 0 && index + 1 < descriptor.size) {
    return (short)(((descriptor.memory[descriptor.start + index + 0] & 0xff) << 8) | ((descriptor.memory[descriptor.start + index + 1] & 0xff) << 0));
  }
 else {
    throw new IndexOutOfBoundsException();
  }
}
