{
  try {
    FileSystem fs=path.getFileSystem();
    if (fs.exists(this.path) && fs.getFileStatus(this.path).isDir()) {
      this.path=this.path.suffix("/" + this.taskIndex);
    }
    this.fdos=fs.create(path,true);
  }
 catch (  Exception t) {
    this.success=false;
    this.exception=t;
  }
}
