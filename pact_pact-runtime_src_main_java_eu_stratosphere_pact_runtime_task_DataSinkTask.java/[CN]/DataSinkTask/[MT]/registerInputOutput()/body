{
  if (LOG.isDebugEnabled())   LOG.debug(getLogString("Start registering input and output"));
  initOutputFormat();
  initInputReader();
  this.availableMemory=config.getMemorySize();
  this.maxFileHandles=config.getNumFilehandles();
  this.spillThreshold=config.getSortSpillingTreshold();
  if (LOG.isDebugEnabled())   LOG.debug(getLogString("Finished registering input and output"));
}
