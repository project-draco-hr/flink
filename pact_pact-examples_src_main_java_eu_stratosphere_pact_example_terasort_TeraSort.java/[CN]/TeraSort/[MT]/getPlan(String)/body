{
  final int noSubTasks=(args.length > 0 ? Integer.parseInt(args[0]) : 1);
  final String input=(args.length > 1 ? args[1] : "");
  final String output=(args.length > 2 ? args[2] : "");
  final FileDataSource source=new FileDataSource(TeraInputFormat.class,input,"Data Source");
  source.setDegreeOfParallelism(noSubTasks);
  final FileDataSink sink=new FileDataSink(TeraOutputFormat.class,output,"Data Sink");
  sink.setDegreeOfParallelism(noSubTasks);
  sink.setGlobalOrder(Order.ASCENDING);
  sink.getCompilerHints().setInputDistributionClass(TeraDistribution.class);
  sink.setInput(source);
  return new Plan(sink,"TeraSort");
}
