{
  checkNotNull(configuration,"Configuration");
  StateStorageHelper<SubmittedJobGraph> stateStorage=createFileSystemStateStorage(configuration,"submittedJobGraph");
  String zooKeeperSubmittedJobsPath=getConfiguredStringValue(configuration,ConfigConstants.HA_ZOOKEEPER_JOBGRAPHS_PATH,ConfigConstants.ZOOKEEPER_JOBGRAPHS_PATH,ConfigConstants.DEFAULT_ZOOKEEPER_JOBGRAPHS_PATH);
  return new ZooKeeperSubmittedJobGraphStore(client,zooKeeperSubmittedJobsPath,stateStorage);
}
