{
  String checkpointIdCounterPath=getConfiguredStringValue(configuration,ConfigConstants.HA_ZOOKEEPER_CHECKPOINT_COUNTER_PATH,ConfigConstants.ZOOKEEPER_CHECKPOINT_COUNTER_PATH,ConfigConstants.DEFAULT_ZOOKEEPER_CHECKPOINT_COUNTER_PATH);
  checkpointIdCounterPath+=ZooKeeperSubmittedJobGraphStore.getPathForJob(jobId);
  return new ZooKeeperCheckpointIDCounter(client,checkpointIdCounterPath);
}
