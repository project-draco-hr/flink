{
  String checkpointIdCounterPath=configuration.getString(ConfigConstants.ZOOKEEPER_CHECKPOINT_COUNTER_PATH,ConfigConstants.DEFAULT_ZOOKEEPER_CHECKPOINT_COUNTER_PATH);
  checkpointIdCounterPath+=ZooKeeperSubmittedJobGraphStore.getPathForJob(jobId);
  return new ZooKeeperCheckpointIDCounter(client,checkpointIdCounterPath);
}
