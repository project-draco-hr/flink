{
  try {
    TypeSerializer<String> serializer=getSerializer();
    String testData=getData();
    TestOutputView out=new TestOutputView();
    serializer.serialize(testData,out);
    TestInputView in=out.getInputView();
    assertTrue("No data available during deserialization.",in.available() > 0);
    String deserialized=serializer.deserialize(serializer.createInstance(),in);
    assertEquals("Deserialized value if wrong.",testData,deserialized);
    assertTrue("Trailing data available after deserialization.",in.available() == 0);
  }
 catch (  Exception e) {
    System.err.println(e.getMessage());
    e.printStackTrace();
    fail("Exception in test: " + e.getMessage());
  }
}
