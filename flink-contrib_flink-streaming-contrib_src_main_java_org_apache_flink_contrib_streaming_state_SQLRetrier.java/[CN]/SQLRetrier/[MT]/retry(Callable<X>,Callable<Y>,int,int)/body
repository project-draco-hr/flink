{
  int numtries=0;
  while (true) {
    try {
      return callable.call();
    }
 catch (    SQLException se) {
      try {
        onException.call();
      }
 catch (      Exception e) {
      }
      handleSQLException(se,++numtries,numRetries,sleep);
    }
catch (    Exception ex) {
      throw new RuntimeException(ex);
    }
  }
}
