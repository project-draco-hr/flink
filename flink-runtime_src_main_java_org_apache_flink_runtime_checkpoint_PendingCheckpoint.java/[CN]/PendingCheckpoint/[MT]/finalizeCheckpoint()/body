{
synchronized (lock) {
    if (discarded) {
      throw new IllegalStateException("pending checkpoint is discarded");
    }
    if (notYetAcknowledgedTasks.isEmpty()) {
      CompletedCheckpoint completed=new CompletedCheckpoint(jobId,checkpointId,checkpointTimestamp,System.currentTimeMillis(),new HashMap<>(taskStates));
      dispose(null,false);
      return completed;
    }
 else {
      throw new IllegalStateException("Cannot complete checkpoint while not all tasks are acknowledged");
    }
  }
}
