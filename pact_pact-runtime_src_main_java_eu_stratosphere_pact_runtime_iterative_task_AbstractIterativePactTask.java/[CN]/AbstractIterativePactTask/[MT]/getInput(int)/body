{
  String owner=getEnvironment().getTaskName() + " (" + (getEnvironment().getIndexInSubtaskGroup() + 1)+ '/'+ getEnvironment().getCurrentNumberOfSubtasks()+ ")";
  InterruptingMutableObjectIterator<X> interruptingIterator=new InterruptingMutableObjectIterator<X>((MutableObjectIterator<X>)super.getInput(index),numberOfEventsUntilInterrupt(),owner);
  getReader(index).subscribeToEvent(interruptingIterator,EndOfSuperstepEvent.class);
  return interruptingIterator;
}
