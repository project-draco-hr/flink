{
  InterruptingMutableObjectIterator<X> interruptingIterator=new InterruptingMutableObjectIterator<X>((MutableObjectIterator<X>)super.getInput(index),numberOfEventsUntilInterrupt(),getClass().getSimpleName());
  getEnvironment().getInputGate(index).subscribeToEvent(interruptingIterator,EndOfSuperstepEvent.class);
  return interruptingIterator;
}
