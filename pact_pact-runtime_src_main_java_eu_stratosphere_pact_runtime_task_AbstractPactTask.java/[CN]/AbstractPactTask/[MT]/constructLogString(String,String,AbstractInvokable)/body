{
  StringBuilder bld=new StringBuilder(128);
  bld.append(message);
  bld.append(':').append(' ');
  bld.append(taskName);
  bld.append(' ').append('(');
  bld.append(parent.getEnvironment().getIndexInSubtaskGroup() + 1);
  bld.append('/');
  bld.append(parent.getEnvironment().getCurrentNumberOfSubtasks());
  bld.append(')');
  return bld.toString();
}
