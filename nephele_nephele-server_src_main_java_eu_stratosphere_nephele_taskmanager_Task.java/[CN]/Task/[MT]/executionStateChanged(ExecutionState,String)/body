{
  ExecutionStateTransition.checkTransition(getTaskName(),this.executionState,newExecutionState);
  final Iterator<ExecutionListener> it=this.registeredListeners.iterator();
  while (it.hasNext()) {
    it.next().executionStateChanged(this.environment.getJobID(),this.vertexID,newExecutionState,optionalMessage);
  }
  this.executionState=newExecutionState;
  this.taskManager.executionStateChanged(this.environment.getJobID(),this.vertexID,this,newExecutionState,optionalMessage);
}
