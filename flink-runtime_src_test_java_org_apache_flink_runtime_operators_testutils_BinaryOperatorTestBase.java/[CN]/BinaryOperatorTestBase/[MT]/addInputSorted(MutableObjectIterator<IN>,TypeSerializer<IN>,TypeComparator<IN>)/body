{
  this.inputSerializers.add(serializer);
  UnilateralSortMerger<IN> sorter=new UnilateralSortMerger<>(this.memManager,this.ioManager,input,this.owner,new RuntimeSerializerFactory<>(serializer,(Class<IN>)serializer.createInstance().getClass()),comp,this.perSortFractionMem,32,0.8f,false);
  this.sorters.add(sorter);
  this.inputs.add(null);
}
