{
  final Map<Class<? extends IJsonNode>,Coercer<?,TextNode>> toStringCoercers=new IdentityHashMap<Class<? extends IJsonNode>,Coercer<?,TextNode>>();
  toStringCoercers.put(IJsonNode.class,new Coercer<IJsonNode,TextNode>(TextNode.class){
    @Override public TextNode coerce(    final IJsonNode from,    final TextNode target){
      target.setValue(from.toString());
      return target;
    }
  }
);
  toStringCoercers.put(NullNode.class,new Coercer<IJsonNode,TextNode>(TextNode.class){
    @Override public TextNode coerce(    final IJsonNode from,    final TextNode target){
      target.setValue("");
      return target;
    }
  }
);
  return toStringCoercers;
}
