{
  final ObjectCreation transformation=new ObjectCreation();
  transformation.addMapping("field",createPath("0","[" + index + "]"));
  final AndExpression condition=new AndExpression(new ComparativeExpression(createPath("0","id"),BinaryOperator.EQUAL,createPath("1","userid")));
  return new Join(null,null).withJoinCondition(condition).withResultProjection(transformation);
}
