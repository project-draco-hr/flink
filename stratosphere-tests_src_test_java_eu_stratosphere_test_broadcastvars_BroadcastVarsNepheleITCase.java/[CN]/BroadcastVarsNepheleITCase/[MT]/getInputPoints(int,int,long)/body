{
  if (numPoints < 1 || numPoints > 1000000)   throw new IllegalArgumentException();
  Random r=new Random();
  StringBuilder bld=new StringBuilder(3 * (1 + numDimensions) * numPoints);
  for (int i=1; i <= numPoints; i++) {
    bld.append(i);
    bld.append(' ');
    r.setSeed(seed + 1000 * i);
    for (int j=1; j <= numDimensions; j++) {
      bld.append(r.nextInt(1000));
      bld.append(' ');
    }
    bld.append('\n');
  }
  return bld.toString();
}
