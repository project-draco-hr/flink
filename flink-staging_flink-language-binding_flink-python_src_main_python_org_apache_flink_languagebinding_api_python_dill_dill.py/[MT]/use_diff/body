def use_diff(on=True):
    '\n    reduces size of pickles by only including object which have changed.\n    Decreases pickle size but increases CPU time needed.\n    Also helps avoid some unpicklable objects.\n    MUST be called at start of script, otherwise changes will not be recorded.\n    '
    global _use_diff, diff
    _use_diff = on
    if (_use_diff and (diff is None)):
        try:
            from . import diff as d
        except:
            import diff as d
        diff = d
