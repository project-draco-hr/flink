def _import_module(import_name, safe=False):
    try:
        if ('.' in import_name):
            items = import_name.split('.')
            module = '.'.join(items[:(-1)])
            obj = items[(-1)]
        else:
            return __import__(import_name)
        return getattr(__import__(module, None, None, [obj]), obj)
    except (ImportError, AttributeError):
        if safe:
            return None
        raise
