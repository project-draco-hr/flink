{
  Condition condition=new Condition(new Comparison(createPath("0","id"),BinaryOperator.EQUAL,createPath("1","userid")));
  ObjectCreation transformation=new ObjectCreation();
  transformation.addMapping("name",createPath("0","name"));
  transformation.addMapping(new ObjectCreation.CopyFields(createPath("1")));
  assertParseResult(new Join(transformation,condition,usersSource(),usersPages()),usersJaql() + "join u in users, p in pages where u.id == p.userid into {u.name, p.*};");
}
