{
  Condition condition=new Condition(new Comparison(createPath("0","id"),BinaryOperator.EQUAL,createPath("1","userid")));
  Transformation transformation=new Transformation();
  transformation.addMapping(new ValueAssignment("name",createPath("0","name")));
  transformation.addMapping(new ValueAssignment(ValueAssignment.COPY_ALL_FIELDS,createPath("1")));
  assertParseResult(new Join(transformation,condition,usersSource(),usersPages()),usersJaql() + "join users, pages where users.id == pages.userid into {users.name, pages.*};");
}
