{
  super.read(input);
  ClassLoader cl=null;
  try {
    cl=LibraryCacheManager.getClassLoader(this.getJobGraph().getJobID());
  }
 catch (  IOException ioe) {
    throw new RuntimeException("Usercode ClassLoader could not be obtained for job: " + this.getJobGraph().getJobID(),ioe);
  }
  final Configuration config=this.getConfiguration();
  config.setClassLoader(cl);
  final TaskConfig taskConfig=new TaskConfig(config);
  inputFormat=taskConfig.<InputFormat<?,InputSplit>>getStubWrapper(cl).getUserCodeObject(InputFormat.class,cl);
  inputFormat.configure(taskConfig.getStubParameters());
}
