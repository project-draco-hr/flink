{
  Collection<T> buffers=new ArrayList<T>(freeSegments.size());
  for (  MemorySegment segment : freeSegments) {
    try {
      T buffer=createBuffer(bufferType);
      buffer.bind(segment);
      buffers.add(buffer);
    }
 catch (    ServiceException e) {
      throw e;
    }
  }
  return buffers;
}
