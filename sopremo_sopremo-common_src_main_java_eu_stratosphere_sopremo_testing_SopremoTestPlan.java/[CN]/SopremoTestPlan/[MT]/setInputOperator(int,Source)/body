{
  this.inputs[index].setOperator(operator);
  if (operator.isAdhoc())   for (  final JsonNode node : (ArrayNode)operator.getAdhocValues())   this.inputs[index].add(node);
 else {
    final TestRecords testPairs=new TestRecords();
    testPairs.fromFile(JsonInputFormat.class,operator.getInputName());
    for (    final PactRecord record : testPairs)     this.inputs[index].add(Schema.Default.recordToJson(record,null));
    testPairs.close();
  }
}
