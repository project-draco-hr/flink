{
  for (int index=0; index < this.outputContracts.length; index++)   if (this.outputContracts[index].getInput() == null)   throw new IllegalStateException(String.format("%d. output is not connected",index));
  for (int index=this.outputContracts.length; index < this.allOutputContracts.size(); index++)   if (this.allOutputContracts.get(index).getInput() == null)   throw new IllegalStateException(String.format("%d. internal output is not connected",index - this.outputContracts.length));
  final Collection<Contract> visitedContracts=this.getAllContracts();
  for (int index=0; index < this.inputContracts.length; index++)   if (!visitedContracts.contains(this.inputContracts[index]))   throw new IllegalStateException(String.format("%d. input is not connected",index));
}
