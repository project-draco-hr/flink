{
  super(input.getDataSet(),input.getDataSet().getType());
  if (input == null || function == null)   throw new NullPointerException();
  if (field < 0 || field >= input.getDataSet().getType().getArity())   throw new IllegalArgumentException("Aggregation field position is out of range.");
  this.aggregationFunctions=new Aggregations[]{function};
  this.fields=new int[]{field};
  this.groupingFields=null;
}
