{
  ZkUtils zkUtils=getZkUtils();
  try {
    LOG.info("Deleting topic {}",topic);
    ZkClient zk=new ZkClient(standardCC.zkConnect(),standardCC.zkSessionTimeoutMs(),standardCC.zkConnectionTimeoutMs(),new ZooKeeperStringSerializer());
    AdminUtils.deleteTopic(zkUtils,topic);
    zk.close();
  }
  finally {
    zkUtils.close();
  }
}
