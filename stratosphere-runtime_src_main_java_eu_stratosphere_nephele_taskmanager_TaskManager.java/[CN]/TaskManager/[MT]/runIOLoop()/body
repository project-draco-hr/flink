{
  long interval=GlobalConfiguration.getInteger("taskmanager.setup.periodictaskinterval",DEFAULTPERIODICTASKSINTERVAL);
  while (!Thread.interrupted()) {
    try {
      Thread.sleep(interval);
    }
 catch (    InterruptedException e1) {
      LOG.debug("Heartbeat thread was interrupted");
      break;
    }
    try {
      this.jobManager.sendHeartbeat(this.localInstanceConnectionInfo,this.hardwareDescription);
    }
 catch (    IOException e) {
      e.printStackTrace();
      LOG.info("sending the heart beat caused an IO Exception");
    }
    checkTaskExecution();
  }
  shutdown();
}
