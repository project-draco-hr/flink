{
  final int maxBit=0x1 << 7;
  int len=this.value.length();
  while (len >= maxBit) {
    out.write(len | maxBit);
    len>>=7;
  }
  out.write(len);
  for (int i=0; i < this.value.length(); i++) {
    int c=this.value.charAt(i);
    while (c >= maxBit) {
      out.write(c | maxBit);
      c>>=7;
    }
    out.write(c);
  }
}
