{
  OutputPathOpenThread opot=new OutputPathOpenThread(this.outputFilePath,this.writeMode,(taskNumber + 1),numTasks,this.openTimeout);
  opot.start();
  try {
    this.stream=opot.waitForCompletion();
  }
 catch (  Exception e) {
    throw new RuntimeException("Stream to output file could not be opened: " + e.getMessage(),e);
  }
}
