{
synchronized (lock) {
    while (error == null && channel == null) {
      try {
        lock.wait(2000);
      }
 catch (      InterruptedException e) {
        throw new RuntimeException("Channel buildup interrupted.");
      }
    }
  }
  if (error != null) {
    throw new IOException("Connecting the channel failed: " + error.getMessage(),error);
  }
  return channel;
}
