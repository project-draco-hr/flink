{
  if (fields.length % 2 != 0)   throw new IllegalArgumentException();
  ObjectNode objectNode=NODE_FACTORY.objectNode();
  for (int index=0; index < fields.length; index+=2)   objectNode.put(fields[index].toString(),OBJECT_MAPPER.valueToTree(fields[index + 1]));
  return new PactJsonObject(objectNode);
}
