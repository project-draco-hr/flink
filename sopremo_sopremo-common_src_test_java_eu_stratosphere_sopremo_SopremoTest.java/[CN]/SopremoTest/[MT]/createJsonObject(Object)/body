{
  if (fields.length % 2 != 0)   throw new IllegalArgumentException("must have an even number of params");
  ObjectNode objectNode=JsonUtil.NODE_FACTORY.objectNode();
  for (int index=0; index < fields.length; index+=2)   objectNode.put(fields[index].toString(),JsonUtil.OBJECT_MAPPER.valueToTree(fields[index + 1]));
  return new PactJsonObject(objectNode);
}
