{
  try {
    return clazz.newInstance();
  }
 catch (  InstantiationException e) {
    throw new RuntimeException("The given class could not be instantiated. " + "The class is either abstract or it misses a nullary constructor.");
  }
catch (  IllegalAccessException e) {
    throw new RuntimeException("Class or its nullary constructor is not public.");
  }
}
