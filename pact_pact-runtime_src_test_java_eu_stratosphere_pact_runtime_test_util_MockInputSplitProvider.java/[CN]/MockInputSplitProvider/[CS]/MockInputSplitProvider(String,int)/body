{
  this.inputSplits=new InputSplit[noSplits];
  String[] hosts={"localhost"};
  String localPath=path.substring(7,path.length());
  File inFile=new File(localPath);
  long splitLength=inFile.length() / noSplits;
  long pos=0;
  for (int i=0; i < noSplits - 1; i++) {
    this.inputSplits[i]=new FileInputSplit(i,new Path(path),pos,splitLength,hosts);
    pos+=splitLength;
  }
  this.inputSplits[noSplits - 1]=new FileInputSplit(noSplits - 1,new Path(path),pos,inFile.length() - pos,hosts);
}
