{
  if (!parseParameters(args)) {
    return;
  }
  final StreamExecutionEnvironment env=StreamExecutionEnvironment.getExecutionEnvironment();
  final DataStream<String> text=getTextDataStream(env);
  final DataStream<Tuple2<String,Integer>> counts=text.transform("StormBoltTokenizer",TypeExtractor.getForObject(new Tuple2<String,Integer>(new String(),new Integer(0))),new StormBoltWrapper<String,Tuple2<String,Integer>>(new StormBoltTokenizer())).groupBy(0).sum(1);
  if (fileOutput) {
    counts.writeAsText(outputPath);
  }
 else {
    counts.print();
  }
  env.execute("Streaming WordCount with Storm bolt tokenizer");
}
