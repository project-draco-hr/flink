{
  byte[] buf=new byte[4 * 1024];
  FileInputStream is=null;
  try {
    is=new FileInputStream(file);
    out.write(("==== FILE: " + file.toString() + " ====\n").getBytes());
    int bytesRead;
    while ((bytesRead=is.read(buf)) != -1) {
      out.write(buf,0,bytesRead);
    }
  }
  finally {
    if (is != null) {
      is.close();
    }
  }
}
