{
  LOG.info("Shutting down and unregistering as a Mesos framework.");
  try {
    schedulerDriver.stop(false);
  }
 catch (  Exception ex) {
    LOG.warn("unable to unregister the framework",ex);
  }
  try {
    workerStore.cleanup();
  }
 catch (  Exception ex) {
    LOG.warn("unable to cleanup the ZooKeeper state",ex);
  }
  context().stop(self());
}
