{
  final ArrayList<Method> methods=new ArrayList<Method>();
  for (  final Method method : clazz.getMethods())   if (name == null || method.getName().equals(name)) {
    for (    final int modifiers : modifierBitsets)     if ((method.getModifiers() & modifiers) != modifiers)     continue;
    methods.add(method);
  }
  return methods;
}
