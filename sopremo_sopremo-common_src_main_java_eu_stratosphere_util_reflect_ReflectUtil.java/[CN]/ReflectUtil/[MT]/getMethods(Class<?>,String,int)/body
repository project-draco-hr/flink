{
  ArrayList<Method> methods=new ArrayList<Method>();
  for (  Method method : clazz.getMethods())   if ((name == null || method.getName().equals(name))) {
    for (    int modifiers : modifierBitsets)     if ((method.getModifiers() & modifiers) != modifiers)     continue;
    methods.add(method);
  }
  return methods;
}
