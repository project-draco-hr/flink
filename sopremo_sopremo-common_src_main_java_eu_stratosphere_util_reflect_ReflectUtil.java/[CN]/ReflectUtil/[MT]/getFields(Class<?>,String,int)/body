{
  final ArrayList<Field> fields=new ArrayList<Field>();
  for (  final Field field : clazz.getDeclaredFields())   if (name == null || field.getName().equals(name)) {
    for (    final int modifiers : modifierBitsets)     if ((field.getModifiers() & modifiers) != modifiers)     continue;
    fields.add(field);
  }
  return fields;
}
