{
  final long startTime=System.currentTimeMillis();
  while (instanceListener.getNumberOfAllocatedInstances() < numberOfInstances) {
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException e) {
      break;
    }
    if ((System.currentTimeMillis() - startTime) >= maxWaitTime) {
      break;
    }
  }
}
