{
  if (args.length == 4) {
    host=args[0];
    port=Integer.parseInt(args[1]);
    topic=args[2];
    partition=Integer.parseInt(args[3]);
    offset=Long.parseLong(args[4]);
    return true;
  }
 else {
    System.err.println("Usage: KafkaConsumerExample <host> <port> <topic> <partition> <offset>");
    return false;
  }
}
