{
  final File oldFile=new File(checkpointDir + File.separator + CheckpointUtils.METADATA_PREFIX+ "_"+ this.task.getVertexID()+ "_part");
  final File newFile=new File(checkpointDir + File.separator + CheckpointUtils.METADATA_PREFIX+ "_"+ this.task.getVertexID()+ "_"+ this.metaDataSuffix);
  if (!oldFile.renameTo(newFile)) {
    LOG.error("Unable to rename " + oldFile.getAbsoluteFile() + " to "+ newFile.getAbsoluteFile());
    return false;
  }
  return true;
}
