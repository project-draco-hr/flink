{
  final Configuration configuration=GlobalConfiguration.getConfiguration();
  this.numberOfBuffersPerChannel=configuration.getInteger("channel.inMemory.numberOfBuffersPerChannel",DEFAULT_NUMBER_OF_BUFFERS_PER_CHANNEL);
  this.bufferSizeInRecords=configuration.getInteger("channel.inMemory.bufferSizeInRecords",DEFAULT_BUFFER_SIZE_IN_RECORDS);
  this.numberOfConnectionRetries=configuration.getInteger("channel.inMemory.numberOfConnectionRetries",DEFAULT_NUMBER_OF_CONNECTION_RETRIES);
}
