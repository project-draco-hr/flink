{
  OutputPathOpenThread opot=new OutputPathOpenThread(this.outputFilePath,taskNumber,FileInputFormat.OPENING_TIMEOUT);
  opot.start();
  try {
    this.stream=opot.waitForCompletion();
  }
 catch (  Exception e) {
    throw new RuntimeException("Stream to output file could not be opened: " + e.getMessage(),e);
  }
}
