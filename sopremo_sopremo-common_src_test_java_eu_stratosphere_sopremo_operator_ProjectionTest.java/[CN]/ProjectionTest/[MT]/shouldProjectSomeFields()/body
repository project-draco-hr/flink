{
  SopremoTestPlan sopremoPlan=new SopremoTestPlan(1,1);
  Transformation transformation=new Transformation();
  transformation.addMapping(new ValueAssignment("sum",new Arithmetic(createPath("a"),ArithmeticOperator.PLUS,createPath("b"))));
  sopremoPlan.getOutputOperator(0).setInputOperators(new Projection(transformation,sopremoPlan.getInputOperator(0)));
  sopremoPlan.getInput(0).add(createJsonObject("a",1,"b",4)).add(createJsonObject("a",2,"b",5)).add(createJsonObject("a",-1,"b",4));
  sopremoPlan.getOutput(0).addExpected(createJsonObject("sum",5)).addExpected(createJsonObject("sum",7)).addExpected(createJsonObject("sum",3));
  sopremoPlan.run();
}
