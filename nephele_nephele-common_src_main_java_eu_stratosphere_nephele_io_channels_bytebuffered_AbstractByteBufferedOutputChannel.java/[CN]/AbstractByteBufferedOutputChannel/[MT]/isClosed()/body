{
  if (this.closeRequested && this.uncompressedDataBuffer == null && !this.serializationBuffer.dataLeftFromPreviousSerialization()) {
    if (this.ioException != null) {
      throw this.ioException;
    }
synchronized (this.synchronisationObject) {
      if (this.closeAcknowledgementReceived) {
        return true;
      }
    }
  }
  return false;
}
