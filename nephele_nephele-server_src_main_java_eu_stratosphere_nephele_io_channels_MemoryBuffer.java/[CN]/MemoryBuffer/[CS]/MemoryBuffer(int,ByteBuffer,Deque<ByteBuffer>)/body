{
  this.queueForRecycledBuffers=queueForRecycledBuffers;
  if (bufferSize > byteBuffer.capacity()) {
    throw new IllegalArgumentException("Requested buffer size is " + bufferSize + ", but provided byte buffer only has a capacity of "+ byteBuffer.capacity());
  }
  this.byteBuffer=byteBuffer;
  this.byteBuffer.position(0);
  this.byteBuffer.limit(bufferSize);
}
