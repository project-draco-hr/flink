{
  try {
    Path p=this.path;
    final FileSystem fs=p.getFileSystem();
    if (fs.exists(p) && fs.getFileStatus(p).isDir()) {
      p=p.suffix("/" + this.taskIndex);
    }
    if (fs.exists(p)) {
      fs.delete(p,false);
    }
    this.fdos=fs.create(p,true);
    if (this.aborted) {
      final FSDataOutputStream f=this.fdos;
      this.fdos=null;
      f.close();
    }
  }
 catch (  Throwable t) {
    this.error=t;
  }
}
