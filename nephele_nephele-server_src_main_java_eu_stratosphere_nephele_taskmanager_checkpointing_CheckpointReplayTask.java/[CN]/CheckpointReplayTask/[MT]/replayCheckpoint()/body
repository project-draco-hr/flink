{
  int metaDataIndex=0;
  while (true) {
    final File metaDataFile=new File(this.checkpointDirectory + File.separator + CheckpointManager.METADATA_PREFIX+ "_"+ this.vertexID+ "_"+ metaDataIndex);
    while (!metaDataFile.exists()) {
      if (metaDataIndex == 0 || this.isCheckpointComplete) {
        throw new FileNotFoundException("Cannot find meta data file " + metaDataIndex + " for checkpoint of vertex "+ this.vertexID);
      }
      Thread.sleep(100);
    }
    final FileInputStream fis=new FileInputStream(metaDataFile);
    final FileChannel fileChannel=fis.getChannel();
  }
}
