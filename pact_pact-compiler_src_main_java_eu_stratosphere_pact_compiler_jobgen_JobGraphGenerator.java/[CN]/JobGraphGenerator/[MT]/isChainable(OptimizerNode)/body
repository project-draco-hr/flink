{
  if (node.getIncomingConnections().size() == 1) {
    final PactConnection inConn=node.getIncomingConnections().get(0);
    final OptimizerNode predecessor=inConn.getSourcePact();
    if (predecessor instanceof UnionNode)     return false;
    if (inConn.getShipStrategy().type() == ShipStrategyType.FORWARD && predecessor.getOutConns().size() == 1) {
      return node.getDegreeOfParallelism() == predecessor.getDegreeOfParallelism() && node.getInstancesPerMachine() == predecessor.getInstancesPerMachine();
    }
  }
  return false;
}
