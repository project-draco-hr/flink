{
  String packagePath=this.getPackagePath(packageName);
  QueryUtil.LOG.debug("adding package " + packagePath);
  try {
    if (packagePath.endsWith(".jar"))     this.importFromJar(new File(packagePath).getAbsolutePath(),new File(packagePath));
 else     this.importFromProject(new File(packagePath).getAbsolutePath(),new File(packagePath));
  }
 catch (  IOException e) {
    throw new IllegalArgumentException(String.format("could not load package %s",packagePath));
  }
  this.operatorSuggestion=null;
}
