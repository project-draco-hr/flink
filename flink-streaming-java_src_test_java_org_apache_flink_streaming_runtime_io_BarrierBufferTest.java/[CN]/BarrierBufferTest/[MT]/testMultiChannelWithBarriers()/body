    ValidatingCheckpointHandler handler=new ValidatingCheckpointHandler();
    buffer.registerCheckpointEventHandler(handler);
    handler.setNextExpectedCheckpointId(1L);
    check(sequence[0],buffer.getNextNonBlocked());
