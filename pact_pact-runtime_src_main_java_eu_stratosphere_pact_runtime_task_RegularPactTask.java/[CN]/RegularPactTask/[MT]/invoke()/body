{
  if (LOG.isInfoEnabled())   LOG.info(formatLogString("Start PACT code."));
  final int numInputs=this.driver.getNumberOfInputs();
  try {
    try {
      initInputsSerializersAndComparators(numInputs);
      initLocalStrategies(numInputs);
    }
 catch (    Exception e) {
      throw new RuntimeException("Initializing the input processing failed" + e.getMessage() == null ? "." : ": " + e.getMessage(),e);
    }
    if (!this.running) {
      if (LOG.isDebugEnabled())       LOG.info(formatLogString("Task cancelled before PACT code was started."));
      return;
    }
    initialize();
    run();
  }
  finally {
    closeLocalStrategiesAndCaches();
  }
  if (this.running) {
    if (LOG.isInfoEnabled())     LOG.info(formatLogString("Finished PACT code."));
  }
 else {
    if (LOG.isWarnEnabled())     LOG.warn(formatLogString("PACT code cancelled."));
  }
}
