{
  requireNonNull(stateType,"The state type class must not be null");
  TypeInformation<S> typeInfo;
  try {
    typeInfo=TypeExtractor.getForClass(stateType);
  }
 catch (  Exception e) {
    throw new RuntimeException("Cannot analyze type '" + stateType.getName() + "' from the class alone, due to generic type parameters. "+ "Please specify the TypeInformation directly.");
  }
  return getKeyValueState(typeInfo,defaultState);
}
