{
  LOG.info("Shutting down all services");
  for (  KafkaServer broker : brokers) {
    if (broker != null) {
      broker.shutdown();
    }
  }
  if (zookeeper != null) {
    try {
      zookeeper.stop();
    }
 catch (    IOException e) {
      LOG.warn("ZK.stop() failed",e);
    }
  }
  zkClient.close();
}
