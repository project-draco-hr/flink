{
  int len=offsets[numCols];
  if (bytes.length > len) {
    byte[] tmp=new byte[len];
    System.arraycopy(bytes,0,tmp,0,len);
    bytes=tmp;
  }
  if (offsets.length > numCols + 1) {
    short[] tmp=new short[numCols + 1];
    System.arraycopy(offsets,0,tmp,0,numCols + 1);
    offsets=tmp;
  }
}
