{
  if (!parseParameters(args)) {
    return;
  }
  final StreamExecutionEnvironment env=StreamExecutionEnvironment.getExecutionEnvironment();
  StormConfig config=new StormConfig();
  config.put(ExclamationBolt.EXCLAMATION_COUNT,new Integer(exclamationNum));
  env.getConfig().setGlobalJobParameters(config);
  final DataStream<String> text=getTextDataStream(env);
  final DataStream<String> exclaimed=text.transform("StormBoltTokenizer",TypeExtractor.getForObject(""),new StormBoltWrapper<String,String>(new ExclamationBolt(),new String[]{Utils.DEFAULT_STREAM_ID})).map(new ExclamationMap());
  if (fileOutput) {
    exclaimed.writeAsText(outputPath);
  }
 else {
    exclaimed.print();
  }
  env.execute("Streaming WordCount with Storm bolt tokenizer");
}
