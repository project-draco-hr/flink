{
  try {
    segment.put(0,(byte)0);
    fail("IndexOutOfBoundsException expected");
  }
 catch (  Exception e) {
    assertTrue(e instanceof IndexOutOfBoundsException);
  }
  try {
    segment.get(0);
    fail("IndexOutOfBoundsException expected");
  }
 catch (  Exception e) {
    assertTrue(e instanceof IndexOutOfBoundsException);
  }
  try {
    segment.putBoolean(0,true);
    fail("IndexOutOfBoundsException expected");
  }
 catch (  Exception e) {
    assertTrue(e instanceof IndexOutOfBoundsException);
  }
  try {
    segment.getBoolean(0);
    fail("IndexOutOfBoundsException expected");
  }
 catch (  Exception e) {
    assertTrue(e instanceof IndexOutOfBoundsException);
  }
}
