{
  if (Long.SIZE > byteBuffer.capacity()) {
    throw new IOException("Cannot convert long to byte buffer, buffer is too small (" + byteBuffer.limit() + ", required "+ Long.SIZE+ ")");
  }
  byteBuffer.limit(Long.SIZE);
  for (int i=0; i < Long.SIZE; ++i) {
    final int shift=i << 3;
    byteBuffer.put((Long.SIZE - 1) - i,(byte)((longToSerialize & (0xffL << shift)) >>> shift));
  }
}
