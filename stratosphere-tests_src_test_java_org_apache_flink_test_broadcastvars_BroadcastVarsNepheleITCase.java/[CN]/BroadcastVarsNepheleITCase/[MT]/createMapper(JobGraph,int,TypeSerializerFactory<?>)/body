{
  JobTaskVertex pointsInput=JobGraphUtils.createTask(RegularPactTask.class,"Map[DotProducts]",jobGraph,numSubTasks);
{
    TaskConfig taskConfig=new TaskConfig(pointsInput.getConfiguration());
