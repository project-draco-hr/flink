{
  RecoveryMode recoveryMode=RecoveryMode.valueOf(configuration.getString(ConfigConstants.RECOVERY_MODE,ConfigConstants.DEFAULT_RECOVERY_MODE).toUpperCase());
switch (recoveryMode) {
case STANDALONE:
    return StandaloneUtils.createLeaderRetrievalService(configuration);
case ZOOKEEPER:
  return ZooKeeperUtils.createLeaderRetrievalService(configuration);
default :
throw new Exception("Recovery mode " + recoveryMode + " is not supported.");
}
}
