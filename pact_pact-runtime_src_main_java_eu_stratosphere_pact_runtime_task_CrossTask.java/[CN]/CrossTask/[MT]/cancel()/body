{
  this.taskCanceled=true;
  if (this.spillingResetIt != null) {
    this.spillingResetIt.abort();
  }
  if (this.blockResetIt != null) {
    this.blockResetIt.close();
    this.blockResetIt=null;
  }
  LOG.warn("Cancelling PACT code: " + this.getEnvironment().getTaskName() + " ("+ (this.getEnvironment().getIndexInSubtaskGroup() + 1)+ "/"+ this.getEnvironment().getCurrentNumberOfSubtasks()+ ")");
}
