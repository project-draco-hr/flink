{
  this.taskCanceled=true;
  if (config.getLocalStrategy() == LocalStrategy.NESTEDLOOP_BLOCKED_OUTER_FIRST || config.getLocalStrategy() == LocalStrategy.NESTEDLOOP_BLOCKED_OUTER_SECOND) {
    if (this.spillingResetIt != null)     this.spillingResetIt.abort();
    if (this.blockResetIt != null)     this.blockResetIt.abort();
  }
 else   if (config.getLocalStrategy() == LocalStrategy.NESTEDLOOP_STREAMED_OUTER_FIRST || config.getLocalStrategy() == LocalStrategy.NESTEDLOOP_STREAMED_OUTER_SECOND) {
    if (this.spillingResetIt != null)     this.spillingResetIt.abort();
  }
  LOG.warn("Cancelling PACT code: " + this.getEnvironment().getTaskName() + " ("+ (this.getEnvironment().getIndexInSubtaskGroup() + 1)+ "/"+ this.getEnvironment().getCurrentNumberOfSubtasks()+ ")");
}
