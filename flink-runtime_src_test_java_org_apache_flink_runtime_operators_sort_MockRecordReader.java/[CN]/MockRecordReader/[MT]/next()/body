{
  Record r=null;
  while (r == null) {
    try {
      r=queue.take();
    }
 catch (    InterruptedException iex) {
      throw new RuntimeException("Reader was interrupted.");
    }
  }
  if (r == SENTINEL) {
    try {
      queue.put(r);
    }
 catch (    InterruptedException e) {
      throw new RuntimeException("Reader was interrupted.");
    }
    return null;
  }
 else {
    Record result=new Record(r.getNumFields());
    r.copyTo(result);
    return result;
  }
}
