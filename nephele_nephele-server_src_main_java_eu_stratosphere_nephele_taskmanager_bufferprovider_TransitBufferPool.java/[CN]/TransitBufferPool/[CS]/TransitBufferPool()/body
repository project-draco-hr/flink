{
  final int numberOfBuffers=GlobalConfiguration.getInteger("channel.network.numberOfTransitBuffers",DEFAULT_NUMBER_OF_TRANSIT_BUFFERS);
  this.bufferSizeInBytes=GlobalConfiguration.getInteger("channel.network.bufferSizeInBytes",GlobalBufferPool.DEFAULT_BUFFER_SIZE_IN_BYTES);
  this.buffers=new ArrayDeque<ByteBuffer>(numberOfBuffers);
  for (int i=0; i < numberOfBuffers; i++) {
    final ByteBuffer readBuffer=ByteBuffer.allocateDirect(this.bufferSizeInBytes);
    this.buffers.add(readBuffer);
  }
}
