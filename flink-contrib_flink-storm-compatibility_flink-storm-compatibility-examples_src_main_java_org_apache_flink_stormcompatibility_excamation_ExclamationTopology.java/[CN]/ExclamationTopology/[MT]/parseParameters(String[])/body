{
  if (args.length > 0) {
    fileInputOutput=true;
    if (args.length == 3) {
      textPath=args[0];
      outputPath=args[1];
      exclamationNum=Integer.parseInt(args[2]);
    }
 else {
      System.err.println("Usage: StormExclamation[Local|RemoteByClient|RemoteBySubmitter] <text " + "path> <result path>  <number of exclamation marks>");
      return false;
    }
  }
 else {
    System.out.println("Executing StormExclamation example with built-in default data");
    System.out.println("  Provide parameters to read input data from a file");
    System.out.println("  Usage: StormExclamation[Local|RemoteByClient|RemoteBySubmitter] <text path>" + " <result path> <number of exclamation marks>");
  }
  return true;
}
