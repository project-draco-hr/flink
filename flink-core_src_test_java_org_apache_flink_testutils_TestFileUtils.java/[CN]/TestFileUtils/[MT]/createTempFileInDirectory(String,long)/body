{
  File f;
  do {
    f=new File(dir + "/" + randomFileName());
  }
 while (f.exists());
  f.getParentFile().mkdirs();
  f.createNewFile();
  f.deleteOnExit();
  BufferedOutputStream out=new BufferedOutputStream(new FileOutputStream(f));
  try {
    for (; bytes > 0; bytes--) {
      out.write(0);
    }
  }
  finally {
    out.close();
  }
  return f.toURI().toString();
}
