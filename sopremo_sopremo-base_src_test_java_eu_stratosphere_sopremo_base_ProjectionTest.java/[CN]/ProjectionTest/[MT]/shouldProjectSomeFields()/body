{
  final SopremoTestPlan sopremoPlan=new SopremoTestPlan(1,1);
  final ObjectCreation transformation=new ObjectCreation();
  transformation.addMapping("sum",new ArithmeticExpression(createPath("a"),ArithmeticOperator.ADDITION,createPath("b")));
  sopremoPlan.getOutputOperator(0).setInputs(new Projection().withValueTransformation(transformation).withInputs(sopremoPlan.getInputOperator(0)));
  sopremoPlan.getInput(0).add(createPactJsonObject("a",1,"b",4)).add(createPactJsonObject("a",2,"b",5)).add(createPactJsonObject("a",-1,"b",4));
  sopremoPlan.getExpectedOutput(0).add(createPactJsonObject("sum",5)).add(createPactJsonObject("sum",7)).add(createPactJsonObject("sum",3));
  sopremoPlan.run();
}
