{
  if (this.alive) {
    try {
      this.alive=false;
      this.requestQueue.close();
      this.interrupt();
    }
 catch (    Throwable t) {
    }
    IOException ioex=new IOException("Writer thread has been closed.");
    while (!this.requestQueue.isEmpty()) {
      WriteRequest request=this.requestQueue.poll();
      request.requestDone(ioex);
    }
  }
}
