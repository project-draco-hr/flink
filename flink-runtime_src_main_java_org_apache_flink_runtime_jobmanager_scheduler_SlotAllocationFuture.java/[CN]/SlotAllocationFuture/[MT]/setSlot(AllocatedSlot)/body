{
  if (slot == null) {
    throw new NullPointerException();
  }
synchronized (monitor) {
    if (this.slot != null) {
      throw new IllegalStateException("The future has already been assigned a slot.");
    }
    this.slot=slot;
    monitor.notifyAll();
    if (action != null) {
      action.slotAllocated(slot);
    }
  }
}
