{
  if (!parseParameters(args)) {
    return;
  }
  final StreamExecutionEnvironment env=StreamExecutionEnvironment.getExecutionEnvironment();
  DataStream<String> text=getTextDataStream(env);
  DataStream<Tuple2<String,Integer>> counts=text.flatMap(new WordCount.Tokenizer()).keyBy(0).window(GlobalWindows.create()).evictor(CountEvictor.of(windowSize)).trigger(CountTrigger.of(slideSize)).sum(1);
  if (fileOutput) {
    counts.writeAsText(outputPath);
  }
 else {
    counts.print();
  }
  env.execute("WindowWordCount");
}
