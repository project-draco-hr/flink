{
  int count=0;
  while (fileBuffer.get(0) == 0 && count < 10) {
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException ie) {
    }
    fileBuffer.load();
    count++;
  }
  if (fileBuffer.get(0) == 0) {
    throw new RuntimeException("External process not responding.");
  }
  fileBuffer.position(1);
}
