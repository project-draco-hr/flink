{
  final KeyedDeserializationSchema<T> clonedDeserializer=InstantiationUtil.clone(deserializer,userCodeClassLoader);
  SimpleConsumerThread<T> brokerThread=new SimpleConsumerThread<>(this,errorHandler,kafkaConfig,leader,seedPartitions,unassignedPartitionsQueue,clonedDeserializer,invalidOffsetBehavior);
  brokerThread.setName(String.format("SimpleConsumer - %s - broker-%s (%s:%d)",taskName,leader.id(),leader.host(),leader.port()));
  brokerThread.setDaemon(true);
  brokerThread.start();
  LOG.info("Starting thread {}",brokerThread.getName());
  return brokerThread;
}
