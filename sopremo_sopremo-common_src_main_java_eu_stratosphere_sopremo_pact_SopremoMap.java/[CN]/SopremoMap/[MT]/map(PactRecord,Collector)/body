{
  this.context.increaseInputCounter();
  if (SopremoUtil.LOG.isTraceEnabled())   SopremoUtil.LOG.trace(String.format("%s %s/%s",this.getContext().operatorTrace(),key,value));
  try {
    this.map(SopremoUtil.wrap(record),new JsonCollector(out));
  }
 catch (  final RuntimeException e) {
    SopremoUtil.LOG.error(String.format("Error occurred @ %s with k/v %s/%s: %s",this.getContext().operatorTrace(),key,value,e));
    throw e;
  }
}
