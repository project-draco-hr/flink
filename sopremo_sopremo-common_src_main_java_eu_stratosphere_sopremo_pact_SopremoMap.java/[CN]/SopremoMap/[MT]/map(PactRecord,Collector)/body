{
  this.context.increaseInputCounter();
  this.collector.setCollector(out);
  JsonNode input=this.inputSchema.recordToJson(record,this.cachedInput);
  if (SopremoUtil.LOG.isTraceEnabled())   SopremoUtil.LOG.trace(String.format("%s %s",this.getContext().operatorTrace(),input));
  try {
    this.map(input,this.collector);
  }
 catch (  final RuntimeException e) {
    SopremoUtil.LOG.error(String.format("Error occurred @ %s with %s: %s",this.getContext().operatorTrace(),this.cachedInput,e));
    throw e;
  }
}
