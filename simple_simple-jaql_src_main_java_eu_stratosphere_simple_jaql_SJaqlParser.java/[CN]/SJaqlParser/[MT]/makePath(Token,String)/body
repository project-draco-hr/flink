{
  Object input=getRawBinding(inputVar,Object.class);
  if (input == null) {
    if (inputVar.getText().equals("$"))     input=((operator_scope)operator_stack.peek()).numInputs == 1 ? new InputSelection(0) : EvaluationExpression.VALUE;
  }
 else   if (input instanceof Operator<?>)   input=new JsonStreamExpression((Operator<?>)input);
  List<EvaluationExpression> accesses=new ArrayList<EvaluationExpression>();
  accesses.add((EvaluationExpression)input);
  for (  String fragment : path)   accesses.add(new ObjectAccess(fragment));
  return PathExpression.valueOf(accesses);
}
