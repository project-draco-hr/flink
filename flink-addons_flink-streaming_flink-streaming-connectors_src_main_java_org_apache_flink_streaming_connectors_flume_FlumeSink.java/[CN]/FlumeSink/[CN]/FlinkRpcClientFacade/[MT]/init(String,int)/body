{
  this.hostname=hostname;
  this.port=port;
  int initCounter=0;
  while (true) {
    if (initCounter >= 90) {
      System.exit(1);
    }
    try {
      this.client=RpcClientFactory.getDefaultInstance(hostname,port);
    }
 catch (    FlumeException e) {
      try {
        Thread.sleep(1000);
      }
 catch (      InterruptedException e1) {
        e1.printStackTrace();
      }
    }
    if (client != null) {
      break;
    }
    initCounter++;
  }
  initDone=true;
}
