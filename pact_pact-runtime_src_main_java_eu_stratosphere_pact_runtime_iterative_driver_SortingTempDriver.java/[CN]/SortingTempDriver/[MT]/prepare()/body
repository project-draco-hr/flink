{
  final TaskConfig config=taskContext.getTaskConfig();
  final long availableMemory=config.getMemorySize();
  if (availableMemory < MIN_REQUIRED_MEMORY) {
    throw new RuntimeException("The temp task was initialized with too little memory: " + availableMemory + ". Required is at least "+ MIN_REQUIRED_MEMORY+ " bytes.");
  }
  sorter=new UnilateralSortMerger(taskContext.getMemoryManager(),taskContext.getIOManager(),taskContext.getInput(0),taskContext.getOwningNepheleTask(),taskContext.getInputSerializer(0),taskContext.getInputComparator(0),availableMemory,config.getNumFilehandles(),config.getSortSpillingTreshold());
}
