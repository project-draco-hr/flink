{
synchronized (lock) {
    Map<Instance,List<SharedSlot>> available=availableSlotsPerJid.get(jid);
    if (available != null) {
      Set<SharedSlot> set=new HashSet<SharedSlot>();
      for (      List<SharedSlot> list : available.values()) {
        for (        SharedSlot slot : list) {
          set.add(slot);
        }
      }
      return set.size();
    }
 else {
      return allSlots.size();
    }
  }
}
