{
  if (newJobStatus == InternalJobStatus.SCHEDULED) {
    this.eventCollector.createRunningJobEvent(executionGraph.getJobID(),this.jobName,this.isProfilingAvailable);
  }
  if (newJobStatus == InternalJobStatus.FAILED || newJobStatus == InternalJobStatus.CANCELED || newJobStatus == InternalJobStatus.FINISHED) {
    this.eventCollector.removeRunningJobEvent(executionGraph.getJobID());
  }
  final JobStatus jobStatus=InternalJobStatus.toJobStatus(newJobStatus);
  if (jobStatus != null) {
    this.eventCollector.addEvent(executionGraph.getJobID(),new JobEvent(System.currentTimeMillis(),jobStatus,optionalMessage));
  }
}
