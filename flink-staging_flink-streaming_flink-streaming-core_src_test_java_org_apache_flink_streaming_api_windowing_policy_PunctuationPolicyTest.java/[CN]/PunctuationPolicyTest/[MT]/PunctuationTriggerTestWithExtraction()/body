{
  @SuppressWarnings({"unchecked","rawtypes"}) PunctuationPolicy<Tuple2<Object,Object>,Object> policy=new PunctuationPolicy<Tuple2<Object,Object>,Object>(new TestObject(0),new FieldFromTuple(0));
  assertTrue("The present punctuation was not detected. (POS 3)",policy.notifyTrigger(new Tuple2<Object,Object>(new TestObject(0),new TestObject(1))));
  assertFalse("There was a punctuation detected which wasn't present. (POS 4)",policy.notifyTrigger(new Tuple2<Object,Object>(new TestObject(1),new TestObject(0))));
}
