{
  String packagePath=getPackagePath(packageName);
  SimpleUtil.LOG.debug("adding package " + packagePath);
  try {
    if (packagePath.endsWith(".jar"))     importFromJar(new File(packagePath).getAbsolutePath(),new File(packagePath));
 else     importFromProject(new File(packagePath).getAbsolutePath(),new File(packagePath));
  }
 catch (  IOException e) {
    throw new IllegalArgumentException(String.format("could not load package %s",packagePath));
  }
}
