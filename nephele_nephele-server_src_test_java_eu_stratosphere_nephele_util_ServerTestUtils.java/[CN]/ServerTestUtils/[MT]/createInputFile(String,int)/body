{
  if (limit < 0) {
    throw new IllegalArgumentException("limit must be >= 0");
  }
  final File inputFile=new File(getTempDir() + File.separator + subDirectory+ File.separator+ getRandomFilename());
  if (inputFile.exists()) {
    inputFile.delete();
  }
  inputFile.createNewFile();
  FileWriter fw=new FileWriter(inputFile);
  for (int i=0; i < limit; i++) {
    fw.write(Integer.toString(i) + "\n");
  }
  fw.close();
  return inputFile;
}
