{
  try {
    File inFile=File.createTempFile("wctext",".in");
    File outFile=File.createTempFile("wctext",".out");
    inFile.deleteOnExit();
    outFile.deleteOnExit();
    FileWriter fw=new FileWriter(inFile);
    fw.write(WordCountData.TEXT);
    fw.close();
    WordCount wc=new WordCount();
    LocalExecutor executor=new LocalExecutor();
    executor.setDefaultOverwriteFiles(true);
    executor.setTaskManagerNumSlots(DOP);
    executor.start();
    executor.executePlan(wc.getPlan(new Integer(DOP).toString(),inFile.toURI().toString(),outFile.toURI().toString()));
    executor.stop();
  }
 catch (  Exception e) {
    e.printStackTrace();
    Assert.fail(e.getMessage());
  }
}
