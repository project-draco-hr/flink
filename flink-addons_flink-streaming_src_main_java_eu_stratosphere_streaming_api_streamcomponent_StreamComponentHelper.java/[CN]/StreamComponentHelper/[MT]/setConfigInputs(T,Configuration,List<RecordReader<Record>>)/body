{
  int numberOfInputs=taskConfiguration.getInteger("numberOfInputs",0);
  for (int i=0; i < numberOfInputs; i++) {
    if (taskBase instanceof StreamTask) {
      inputs.add(new RecordReader<Record>((StreamTask)taskBase,Record.class));
    }
 else     if (taskBase instanceof StreamSink) {
      inputs.add(new RecordReader<Record>((StreamSink)taskBase,Record.class));
    }
 else {
      throw new Exception("Nonsupported object passed to setConfigInputs");
    }
  }
}
