{
  rrLock.lock();
  try {
    if (!splitIsCreated) {
      checkAndAwaitSplitInitialization();
    }
  }
  finally {
    rrLock.unlock();
  }
  if (split == null) {
    LOG.info("Input split has not been created. This should not happen");
    throw new RuntimeException("Input split has not been created. This should not happen");
  }
  return split;
}
