{
  try {
    socket.close();
    sender.close();
    receiver.close();
  }
 catch (  Exception e) {
    LOG.error("Exception occurred while closing Streamer. :" + e.getMessage());
  }
  if (!debug) {
    destroyProcess();
  }
  if (shutdownThread != null) {
    Runtime.getRuntime().removeShutdownHook(shutdownThread);
  }
}
