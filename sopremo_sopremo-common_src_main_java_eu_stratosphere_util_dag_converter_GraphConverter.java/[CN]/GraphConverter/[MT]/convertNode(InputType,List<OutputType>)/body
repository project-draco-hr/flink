{
  final NodeConverterInfo<InputType,OutputType> converterInfo=this.getNodeConverterInfo(in.getClass());
  if (converterInfo == null)   return null;
  try {
    for (    final GraphConversionListener<InputType,OutputType> listener : this.conversionListener)     listener.beforeNodeConversion(in,children);
    final OutputType converted=converterInfo.getConverter().convertNode(in,children);
    for (    final GraphConversionListener<InputType,OutputType> listener : this.conversionListener)     listener.afterNodeConversion(in,children,converted);
    return converted;
  }
 catch (  final Exception e) {
    throw new IllegalStateException(e);
  }
}
