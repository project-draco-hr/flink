{
  OutputStream os=this.getHdfsOutputStream(fileName);
  Writer wr=new OutputStreamWriter(os);
  wr.write(fileContent);
  wr.close();
  while (!getFileSystem().exists(new Path(fileName))) {
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException e) {
      e.printStackTrace();
    }
  }
}
