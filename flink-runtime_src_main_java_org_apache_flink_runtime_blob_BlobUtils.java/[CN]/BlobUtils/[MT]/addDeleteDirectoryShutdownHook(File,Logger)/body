{
  checkNotNull(dir);
  Runtime.getRuntime().addShutdownHook(new Thread(new Runnable(){
    @Override public void run(){
      try {
        FileUtils.deleteDirectory(dir);
      }
 catch (      Throwable t) {
        errorLogger.error("Error deleting directory " + dir + " during JVM shutdown: "+ t.getMessage(),t);
      }
    }
  }
));
}
