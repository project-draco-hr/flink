{
  long value=lValue.getTime() - Long.MIN_VALUE;
  if (numBytes == 8) {
    target.putLongBigEndian(offset,value);
  }
 else   if (numBytes <= 0) {
  }
 else   if (numBytes < 8) {
    for (int i=0; numBytes > 0; numBytes--, i++) {
      target.put(offset + i,(byte)(value >>> ((7 - i) << 3)));
    }
  }
 else {
    target.putLongBigEndian(offset,value);
    for (int i=8; i < numBytes; i++) {
      target.put(offset + i,(byte)0);
    }
  }
}
