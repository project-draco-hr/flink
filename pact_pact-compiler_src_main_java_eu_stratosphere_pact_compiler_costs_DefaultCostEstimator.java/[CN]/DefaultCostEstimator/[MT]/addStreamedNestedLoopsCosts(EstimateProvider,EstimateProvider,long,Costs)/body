{
  long is=innerSide.getEstimatedOutputSize();
  long oc=outerSide.getEstimatedNumRecords();
  if (is > 0 && oc >= 0) {
    if (is > bufferSize) {
      costs.addDiskCost(oc * is);
    }
  }
 else {
    costs.setDiskCost(Costs.UNKNOWN);
  }
  costs.addHeuristicDiskCost(HEURISTIC_COST_BASE * 100000);
}
