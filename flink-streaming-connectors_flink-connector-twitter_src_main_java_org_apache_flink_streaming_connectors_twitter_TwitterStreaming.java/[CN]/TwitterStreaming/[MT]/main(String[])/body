{
  String path;
  if (args != null && args.length == 1) {
    path=args[0];
  }
 else {
    System.err.println("USAGE:\nTwitterStreaming <pathToPropertiesFile>");
    return;
  }
  StreamExecutionEnvironment env=StreamExecutionEnvironment.createLocalEnvironment(PARALLELISM);
  DataStream<String> streamSource=env.addSource(new TwitterSource(path,NUMBEROFTWEETS)).setParallelism(SOURCE_PARALLELISM);
  DataStream<Tuple5<Long,Integer,String,String,String>> selectedDataStream=streamSource.flatMap(new SelectDataFlatMap());
  selectedDataStream.addSink(new TwitterSink());
  env.execute();
}
