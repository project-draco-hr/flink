{
  int toRead=lengthLeft > readBuffer.length ? readBuffer.length : (int)lengthLeft;
  if (lengthLeft <= 0) {
    toRead=readBuffer.length;
    overLimit=true;
  }
  int read=stream.read(readBuffer,0,toRead);
  if (read == -1) {
    stream.close();
    stream=null;
    return false;
  }
 else {
    lengthLeft-=read;
    readPos=0;
    limit=read;
    return true;
  }
}
