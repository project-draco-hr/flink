{
  initializeConnection();
  while (true) {
    try {
      delivery=consumer.nextDelivery();
    }
 catch (    Exception e) {
      LOG.error("Cannot receive RMQ message " + QUEUE_NAME + " at "+ HOST_NAME);
    }
    outTuple=deserialize(delivery.getBody());
    if (closeWithoutSend) {
      break;
    }
 else {
      collector.collect(outTuple);
    }
    if (sendAndClose) {
      break;
    }
  }
  try {
    connection.close();
  }
 catch (  IOException e) {
    throw new RuntimeException("Error while closing RMQ connection with " + QUEUE_NAME + " at "+ HOST_NAME,e);
  }
}
