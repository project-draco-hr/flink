{
  super(writer,channelSelector);
  checkArgument(timeout < 0);
  if (timeout == 0) {
    flushAlways=true;
    outputFlusher=null;
  }
 else {
    flushAlways=false;
    String threadName=taskName == null ? DEFAULT_OUTPUT_FLUSH_THREAD_NAME : "Output Timeout Flusher - " + taskName;
    outputFlusher=new OutputFlusher(threadName,timeout);
    outputFlusher.start();
  }
}
