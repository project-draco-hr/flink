{
  if (LOG.isInfoEnabled()) {
    LOG.info(getTaskNameWithSubtasks() + " switched to " + newState+ (message == null ? "" : " : " + message));
  }
  for (  ActorRef listener : executionListenerActors) {
    listener.tell(new ExecutionGraphMessages.ExecutionStateChanged(jobId,vertexId,taskName,numberOfSubtasks,subtaskIndex,executionId,newState,System.currentTimeMillis(),message),ActorRef.noSender());
  }
}
