{
  SopremoID jobId=SopremoID.generate();
  LOG.info("Receive execution request for job " + jobId);
  final SopremoJobInfo info=new SopremoJobInfo(jobId,request,this.configuration);
  this.meteorInfo.put(jobId,info);
  if (request.getQuery() == null)   info.setStatusAndDetail(ExecutionState.ERROR,"No plan submitted");
 else   if (request.getMode() == null)   info.setStatusAndDetail(ExecutionState.ERROR,"No mode set");
 else   this.executorService.submit(new SopremoExecutionThread(info,getJobManagerAddress()));
  return this.getState(jobId);
}
