{
  if (isRunning) {
    try {
      outputHandler.broadcastBarrier(id);
      confirmBarrier(id);
      if (LOG.isDebugEnabled()) {
        LOG.debug("Superstep " + id + " processed: "+ StreamTask.this);
      }
    }
 catch (    Exception e) {
      if (isRunning) {
        throw new RuntimeException(e);
      }
    }
  }
}
