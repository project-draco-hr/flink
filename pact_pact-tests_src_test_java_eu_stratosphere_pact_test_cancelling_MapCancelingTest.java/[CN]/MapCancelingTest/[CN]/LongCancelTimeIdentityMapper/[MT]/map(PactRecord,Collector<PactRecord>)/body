{
  final long start=System.currentTimeMillis();
  long remaining=WAIT_TIME_PER_RECORD;
  do {
    try {
      Thread.sleep(remaining);
    }
 catch (    InterruptedException iex) {
    }
  }
 while ((remaining=WAIT_TIME_PER_RECORD - System.currentTimeMillis() + start) > 0);
  out.collect(record);
}
