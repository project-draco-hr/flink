{
  if (program == null) {
    throw new IllegalArgumentException("The job may not be null.");
  }
synchronized (this.lock) {
    final boolean shutDownAtEnd;
    if (client == null) {
      shutDownAtEnd=true;
      start();
    }
 else {
      shutDownAtEnd=false;
    }
    try {
      return client.runBlocking(program,defaultParallelism);
    }
  finally {
      if (shutDownAtEnd) {
        stop();
      }
    }
  }
}
