{
  final long value=record.getVertexID() - Long.MIN_VALUE;
  if (len == 8) {
    target.putLongBigEndian(offset,value);
  }
 else   if (len <= 0) {
  }
 else   if (len < 8) {
    for (int i=0; len > 0; len--, i++) {
      target.put(offset + i,(byte)((value >>> ((3 - i) << 3)) & 0xff));
    }
  }
 else {
    target.putLongBigEndian(offset,value);
    for (int i=8; i < len; i++) {
      target.put(offset + i,(byte)0);
    }
  }
}
