{
  if (this.bld == null) {
    this.bld=new StringBuilder();
  }
  final StringBuilder bld=this.bld;
  bld.setLength(0);
  try {
    int b;
    while ((b=readUnsignedByte()) != '\n') {
      if (b != '\r')       bld.append((char)b);
    }
  }
 catch (  EOFException eofex) {
  }
  if (bld.length() == 0)   return null;
  int len=bld.length();
  if (len > 0 && bld.charAt(len - 1) == '\r') {
    bld.setLength(len - 1);
  }
  return bld.toString();
}
