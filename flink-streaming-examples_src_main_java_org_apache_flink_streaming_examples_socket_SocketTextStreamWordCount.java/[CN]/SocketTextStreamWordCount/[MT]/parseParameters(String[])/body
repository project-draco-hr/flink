{
  if (args.length == 3) {
    fileOutput=true;
    hostName=args[0];
    port=Integer.valueOf(args[1]);
    outputPath=args[2];
  }
 else   if (args.length == 2) {
    hostName=args[0];
    port=Integer.valueOf(args[1]);
  }
 else {
    System.err.println("Usage: SocketTextStreamWordCount <hostname> <port> [<output path>]");
    return false;
  }
  return true;
}
