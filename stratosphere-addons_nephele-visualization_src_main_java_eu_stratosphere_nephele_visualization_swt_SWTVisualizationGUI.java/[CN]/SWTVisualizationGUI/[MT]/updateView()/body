{
  final CTabItem selectedTabItem=this.jobTabFolder.getSelection();
  if (selectedTabItem == null) {
    return;
  }
  final Control control=selectedTabItem.getControl();
  if (control == null) {
    return;
  }
  if (!(control instanceof SWTJobTabItem)) {
    return;
  }
  ((SWTJobTabItem)control).updateView();
}
