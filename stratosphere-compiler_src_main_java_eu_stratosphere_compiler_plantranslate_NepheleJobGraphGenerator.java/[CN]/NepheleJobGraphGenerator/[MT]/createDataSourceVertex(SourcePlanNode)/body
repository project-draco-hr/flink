{
  final JobInputVertex vertex=new JobInputVertex(node.getNodeName(),this.jobGraph);
  @SuppressWarnings("unchecked") final Class<AbstractInputTask<?>> clazz=(Class<AbstractInputTask<?>>)(Class<?>)DataSourceTask.class;
  vertex.setInputClass(clazz);
  vertex.setInputFormat((UserCodeWrapper<? extends InputFormat<?,InputSplit>>)node.getPactContract().getUserCodeWrapper());
  vertex.setInputFormatParameters(node.getPactContract().getParameters());
  vertex.setOutputSerializer(node.getSerializer());
  return vertex;
}
