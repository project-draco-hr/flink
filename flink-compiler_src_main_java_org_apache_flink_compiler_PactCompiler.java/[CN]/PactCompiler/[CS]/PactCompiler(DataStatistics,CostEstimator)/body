{
  this.statistics=stats;
  this.costEstimator=estimator;
  Configuration config=GlobalConfiguration.getConfiguration();
  this.defaultDegreeOfParallelism=config.getInteger(ConfigConstants.DEFAULT_PARALLELIZATION_DEGREE_KEY,ConfigConstants.DEFAULT_PARALLELIZATION_DEGREE);
  if (defaultDegreeOfParallelism < 1) {
    LOG.warn("Config value " + defaultDegreeOfParallelism + " for option "+ ConfigConstants.DEFAULT_PARALLELIZATION_DEGREE+ " is invalid. Ignoring and using a value of 1.");
    this.defaultDegreeOfParallelism=1;
  }
}
