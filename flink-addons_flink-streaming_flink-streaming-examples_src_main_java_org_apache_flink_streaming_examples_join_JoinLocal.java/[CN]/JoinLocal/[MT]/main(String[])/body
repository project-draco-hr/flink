{
  StreamExecutionEnvironment env=StreamExecutionEnvironment.createLocalEnvironment(PARALLELISM).setBufferTimeout(100);
  DataStream<Tuple2<String,Integer>> grades=env.addSource(new GradeSource(),SOURCE_PARALLELISM);
  DataStream<Tuple2<String,Integer>> salaries=env.addSource(new SalarySource(),SOURCE_PARALLELISM);
  DataStream<Tuple3<String,Integer,Integer>> joinedStream=grades.connect(salaries).flatMap(new JoinTask());
  System.out.println("(NAME, GRADE, SALARY)");
  joinedStream.print();
  env.execute();
}
