{
  InputSplit[] inputSplits=groupVertex.getInputSplits();
  if (inputSplits == null) {
    throw new ExecutionFailureException("Group vertex" + groupVertex.getName() + " has no input splits assigned");
  }
  LOG.info("Number of input splits: " + inputSplits.length + " for "+ groupVertex.getName());
  initializePriorityQueue(groupVertex,inputSplits);
  for (int i=0; i < inputSplits.length; i++) {
    addFileSplit(inputSplits[i]);
  }
  verifyAssignments();
  vertexPrioQueue.clear();
}
