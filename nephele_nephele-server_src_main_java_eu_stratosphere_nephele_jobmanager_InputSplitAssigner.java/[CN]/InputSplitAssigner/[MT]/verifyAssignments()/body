{
  while (this.vertexPrioQueue.size() > 0) {
    QueueElem topElem=this.vertexPrioQueue.poll();
    if (topElem.getNoAssignedSplits() == 0) {
      throw new ExecutionFailureException("Execution vertex " + topElem.getVertex().getName() + " on "+ topElem.getVertex().getAllocatedResource().getInstance().getInstanceConnectionInfo().getHostName()+ " ("+ topElem.getVertex().getID()+ ") has no input split assigned");
    }
    LOG.info(topElem.getNoAssignedSplits() + ": " + topElem.getVertex().getAllocatedResource().getInstance().getInstanceConnectionInfo().getHostName());
    for (    InputSplit is : topElem.getVertex().getEnvironment().getInputSplits()) {
      LOG.info("\t" + ((FileInputSplit)is).getPath());
      for (      String hn : is.getHostNames()) {
        LOG.info("\t\t" + hn);
      }
    }
  }
}
