{
  InputSelection inputSelection;
  if (inputIndex != -1)   inputSelection=new InputSelection(inputIndex);
 else   if (operator.getSource() == stream.getSource())   inputSelection=new InputSelection(0);
 else {
    int index=operator.getInputs().indexOf(stream.getSource());
    if (index == -1)     return this;
    inputSelection=new InputSelection(index);
  }
  for (  ExpressionTag tag : this.getTags())   inputSelection.addTag(tag);
  return inputSelection;
}
