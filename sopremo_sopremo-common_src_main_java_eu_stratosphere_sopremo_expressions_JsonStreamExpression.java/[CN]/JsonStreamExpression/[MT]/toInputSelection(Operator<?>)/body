{
  InputSelection inputSelection;
  if (this.inputIndex != -1)   inputSelection=new InputSelection(this.inputIndex);
 else   if (operator.getSource() == this.stream.getSource())   inputSelection=new InputSelection(0);
 else {
    final int index=operator.getInputs().indexOf(this.stream.getSource());
    if (index == -1)     return this;
    inputSelection=new InputSelection(index);
  }
  for (  final ExpressionTag tag : this.getTags())   inputSelection.addTag(tag);
  return inputSelection;
}
