{
  while (len >= 8) {
    long tmp=this.getLong(offset1);
    this.putLong(offset1,seg2.getLong(offset2));
    seg2.putLong(offset2,tmp);
    offset1+=8;
    offset2+=8;
    len-=8;
  }
  while (len > 0) {
    byte tmp=this.get(offset1);
    this.put(offset1,seg2.get(offset2));
    seg2.put(offset2,tmp);
    offset1++;
    offset2++;
    len--;
  }
}
