{
synchronized (this.synchronizationObject) {
    if (this.allocatedResource == null) {
      this.allocatedResource=new AllocatedResource(new LocalInstance(this.defaultInstanceType,instanceConnectionInfo,this.networkTopology.getRootNode(),this.networkTopology,hardwareDescription),new AllocationID());
      this.instanceTypeDescriptionList.add(InstanceTypeDescriptionFactory.construct(this.defaultInstanceType,hardwareDescription,1));
    }
  }
}
