{
  try {
    if (this.sorter.write(record)) {
      return;
    }
  }
 catch (  IOException e) {
    throw new ExceptionInChainedStubException(this.taskName,e);
  }
  try {
    sortAndReduce();
  }
 catch (  Exception e) {
    throw new ExceptionInChainedStubException(this.taskName,e);
  }
  this.sorter.reset();
  try {
    if (!this.sorter.write(record)) {
      throw new IOException("Cannot write record to fresh sort buffer. Record too large.");
    }
  }
 catch (  IOException e) {
    throw new ExceptionInChainedStubException(this.taskName,e);
  }
}
