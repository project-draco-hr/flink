{
  outSerializer=outTypeInfo.createSerializer(executionConfig);
  ByteArrayOutputStream baos=new ByteArrayOutputStream();
  OutputViewDataOutputStreamWrapper out=new OutputViewDataOutputStreamWrapper(new DataOutputStream(baos));
  try {
    outSerializer.serialize(initialValue,out);
  }
 catch (  IOException ioe) {
    throw new RuntimeException("Unable to serialize initial value of type " + initialValue.getClass().getSimpleName() + " of fold window function.",ioe);
  }
  serializedInitialValue=baos.toByteArray();
}
