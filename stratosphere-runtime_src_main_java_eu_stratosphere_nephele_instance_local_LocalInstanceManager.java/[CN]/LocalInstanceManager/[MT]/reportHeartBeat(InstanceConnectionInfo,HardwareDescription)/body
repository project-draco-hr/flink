{
synchronized (this.synchronizationObject) {
    if (!localInstances.containsKey(instanceConnectionInfo)) {
      LocalInstance localInstance=new LocalInstance(this.defaultInstanceType,instanceConnectionInfo,this.networkTopology.getRootNode(),this.networkTopology,hardwareDescription);
      localInstances.put(instanceConnectionInfo,localInstance);
      this.instanceTypeDescriptionMap.put(this.defaultInstanceType,InstanceTypeDescriptionFactory.construct(this.defaultInstanceType,hardwareDescription,localInstances.size()));
    }
  }
}
