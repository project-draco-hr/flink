{
  int index=this.schema.hasMapping(fieldName);
  if (fieldInSchema(index)) {
    if (value.isMissing()) {
      this.record.setNull(index);
    }
 else {
      this.record.setField(index,value);
    }
  }
 else {
    if (value.isMissing()) {
      this.getOtherField().remove(fieldName);
    }
 else {
      this.getOtherField().put(fieldName,value);
    }
  }
  return this;
}
