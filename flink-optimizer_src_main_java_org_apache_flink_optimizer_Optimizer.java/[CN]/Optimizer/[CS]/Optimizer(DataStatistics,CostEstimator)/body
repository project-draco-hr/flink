{
  this.statistics=stats;
  this.costEstimator=estimator;
  this.defaultParallelism=GlobalConfiguration.getInteger(ConfigConstants.DEFAULT_PARALLELISM_KEY_OLD,ConfigConstants.DEFAULT_PARALLELISM);
  this.defaultParallelism=GlobalConfiguration.getInteger(ConfigConstants.DEFAULT_PARALLELISM_KEY,this.defaultParallelism);
  if (defaultParallelism < 1) {
    LOG.warn("Config value " + defaultParallelism + " for option "+ ConfigConstants.DEFAULT_PARALLELISM+ " is invalid. Ignoring and using a value of 1.");
    this.defaultParallelism=1;
  }
}
