def readFiles(csv_dir):
    dataframes = {}
    machine = []
    for fname in os.listdir(csv_dir):
        if ('.csv' in fname):
            dataframes[fname.rstrip('.csv')] = pd.read_csv(os.path.join(csv_dir, fname), index_col='Time')
            machine.append(int(fname.rstrip('.csv')[(-1)]))
    return (dataframes, machine)
